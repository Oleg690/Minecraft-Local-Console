                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <Grid.Resources>
                                        <Style x:Key="SideConsolePanel" TargetType="Border">
                                            <Setter Property="Width" Value="400" />
                                            <Setter Property="Height" Value="120" />
                                            <Setter Property="CornerRadius" Value="15" />
                                            <Setter Property="Background" Value="#262A32" />
                                        </Style>

                                        <Style x:Key="SideStatsStyle" TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="White" />
                                            <Setter Property="FontSize" Value="25" />
                                            <Setter Property="FontWeight" Value="Bold" />
                                            <Setter Property="VerticalAlignment" Value="Center" />
                                        </Style>
                                    </Grid.Resources>

                                    <Border
                                        Grid.Row="0"
                                        Margin="0,0,0,25"
                                        Style="{StaticResource SideConsolePanel}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <Image
                                                Grid.Column="0"
                                                Height="70"
                                                Margin="25"
                                                Source="pack://application:,,,/assets/icons/Console Panel Icons/Clock.png" />

                                            <Grid Grid.Column="1" Margin="0,20">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*" />
                                                    <RowDefinition Height="*" />
                                                </Grid.RowDefinitions>

                                                <TextBlock
                                                    Grid.Row="0"
                                                    FontSize="22"
                                                    Style="{StaticResource SideStatsStyle}"
                                                    Text="Uptime:" />
                                                <TextBlock
                                                    Grid.Row="1"
                                                    Style="{StaticResource SideStatsStyle}"
                                                    Text="0h 5m 12s" />
                                            </Grid>
                                        </Grid>
                                    </Border>

                                    <Border Grid.Row="1" Style="{StaticResource SideConsolePanel}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <Image
                                                Grid.Column="0"
                                                Height="70"
                                                Margin="25"
                                                Source="pack://application:,,,/assets/icons/Console Panel Icons/Hard drive.png" />

                                            <Grid Grid.Column="1" Margin="0,20">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*" />
                                                    <RowDefinition Height="*" />
                                                </Grid.RowDefinitions>

                                                <TextBlock
                                                    Grid.Row="0"
                                                    FontSize="22"
                                                    Style="{StaticResource SideStatsStyle}"
                                                    Text="Memory:" />
                                                <TextBlock
                                                    Grid.Row="1"
                                                    Style="{StaticResource SideStatsStyle}"
                                                    Text="2.3GB / 4GB" />
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </Grid>
                        </Viewbox>

                    </Grid>
                    <Grid
                        x:Name="Files"
                        Grid.Row="1"
                        Visibility="Collapsed">
                        <Border
                            x:Name="SelectionPopup"
                            Width="310"
                            Height="110"
                            VerticalAlignment="Top"
                            Panel.ZIndex="2000"
                            Background="#21242c"
                            ClipToBounds="True"
                            CornerRadius="10"
                            Visibility="Hidden">
                            <Border.RenderTransform>
                                <TranslateTransform X="0" Y="-160" />
                            </Border.RenderTransform>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <TextBlock
                                        x:Name="ExplorerPopupText"
                                        Margin="10,10,10,0"
                                        FontSize="20"
                                        FontWeight="SemiBold"
                                        Foreground="White"
                                        Text="Selected: 1" />
                                </Grid>
                                <Grid Grid.Row="1" Margin="10,5,10,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Button
                                        x:Name="ArhiveBtn"
                                        Grid.Column="0"
                                        Margin="0,0,5,0"
                                        Click="ExplorerArhiveBtn"
                                        Style="{StaticResource ArhiveButtonStyle}">
                                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                            <TextBlock
                                                Margin="0,0,5,0"
                                                VerticalAlignment="Center"
                                                FontFamily="Segoe MDL2 Assets"
                                                FontWeight="Light"
                                                Text="&#xE7B8;" />
                                            <TextBlock VerticalAlignment="Center" Text="Archive">
                                                <TextBlock.RenderTransform>
                                                    <TranslateTransform X="0" Y="2" />
                                                </TextBlock.RenderTransform>
                                            </TextBlock>
                                        </StackPanel>
                                    </Button>

                                    <Button
                                        x:Name="DeleteBtn"
                                        Grid.Column="1"
                                        Margin="5,0,0,0"
                                        Click="ExplorerDeleteBtn"
                                        Style="{StaticResource DeleteButtonStyle}">

                                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                            <TextBlock
                                                Margin="0,0,5,0"
                                                VerticalAlignment="Center"
                                                FontFamily="Segoe MDL2 Assets"
                                                FontWeight="Light"
                                                Text="&#xE74D;" />
                                            <TextBlock VerticalAlignment="Center" Text="Delete">
                                                <TextBlock.RenderTransform>
                                                    <TranslateTransform X="0" Y="2" />
                                                </TextBlock.RenderTransform>
                                            </TextBlock>
                                        </StackPanel>
                                    </Button>
                                </Grid>
                            </Grid>
                        </Border>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <StackPanel
                                Grid.Row="0"
                                Margin="25,15,25,10"
                                Orientation="Horizontal">
                                <CheckBox
                                    x:Name="SelectAllCheckBox"
                                    Margin="10"
                                    VerticalAlignment="Center"
                                    Checked="ChangeAllCheckBoxes"
                                    Cursor="Hand"
                                    Unchecked="ChangeAllCheckBoxes">
                                    <CheckBox.LayoutTransform>
                                        <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
                                    </CheckBox.LayoutTransform>
                                    <CheckBox.RenderTransform>
                                        <TranslateTransform X="0" Y="-2" />
                                    </CheckBox.RenderTransform>
                                    <CheckBox.Template>
                                        <ControlTemplate TargetType="{x:Type CheckBox}">
                                            <StackPanel>
                                                <Border
                                                    x:Name="Border"
                                                    Width="20"
                                                    Height="20"
                                                    Background="Transparent"
                                                    BorderBrush="White"
                                                    BorderThickness="2"
                                                    CornerRadius="2">
                                                    <Path
                                                        x:Name="CheckMark"
                                                        Data="M 0 6 L 4 10 L 12 2"
                                                        Stretch="Uniform"
                                                        Stroke="White"
                                                        StrokeThickness="2.2"
                                                        Visibility="Collapsed" />
                                                </Border>
                                                <ContentPresenter
                                                    Margin="5,0,0,0"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center" />
                                            </StackPanel>

                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="CheckMark" Property="Visibility" Value="Visible" />
                                                </Trigger>

                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Trigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <ColorAnimation
                                                                    Storyboard.TargetName="Border"
                                                                    Storyboard.TargetProperty="BorderBrush.Color"
                                                                    To="#D0D0D0"
                                                                    Duration="0:0:0.2" />
                                                                <ColorAnimation
                                                                    Storyboard.TargetName="CheckMark"
                                                                    Storyboard.TargetProperty="Stroke.Color"
                                                                    To="#D0D0D0"
                                                                    Duration="0:0:0.2" />
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </Trigger.EnterActions>

                                                    <Trigger.ExitActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <ColorAnimation
                                                                    Storyboard.TargetName="Border"
                                                                    Storyboard.TargetProperty="BorderBrush.Color"
                                                                    To="White"
                                                                    Duration="0:0:0.2" />
                                                                <ColorAnimation
                                                                    Storyboard.TargetName="CheckMark"
                                                                    Storyboard.TargetProperty="Stroke.Color"
                                                                    To="White"
                                                                    Duration="0:0:0.2" />
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </Trigger.ExitActions>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </CheckBox.Template>
                                </CheckBox>

                                <ScrollViewer
                                    VerticalAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    HorizontalScrollBarVisibility="Auto"
                                    VerticalScrollBarVisibility="Disabled">
                                    <StackPanel
                                        x:Name="pathContainer"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">

                                        <StackPanel.Resources>
                                            <ControlTemplate x:Key="PathButtonTemplate" TargetType="{x:Type Button}">
                                                <Border VerticalAlignment="Center">
                                                    <TextBlock
                                                        x:Name="pathButtonText"
                                                        Margin="5,0"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        FontSize="20"
                                                        FontWeight="SemiBold"
                                                        Foreground="#a8a8a8"
                                                        Text="{TemplateBinding Content}"
                                                        TextAlignment="Center" />
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Trigger.EnterActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <ColorAnimation
                                                                        Storyboard.TargetName="pathButtonText"
                                                                        Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                                                                        To="White"
                                                                        Duration="0:0:0.2" />
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </Trigger.EnterActions>
                                                        <Trigger.ExitActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <ColorAnimation
                                                                        Storyboard.TargetName="pathButtonText"
                                                                        Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                                                                        To="#a8a8a8"
                                                                        Duration="0:0:0.2" />
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </Trigger.ExitActions>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </StackPanel.Resources>
                                    </StackPanel>
                                </ScrollViewer>
                            </StackPanel>

                            <Grid
                                x:Name="ExplorerParent"
                                Grid.Row="1"
                                Margin="20,0,20,20"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch" />
                        </Grid>
                    </Grid>
                    <Grid
                        x:Name="Stats"
                        Grid.Row="1"
                        Visibility="Collapsed">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock
                                FontSize="30"
                                Foreground="White"
                                Text="Stats" />
                        </StackPanel>
                    </Grid>
                    <Grid
                        x:Name="Settings"
                        Grid.Row="1"
                        Visibility="Collapsed">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock
                                FontSize="30"
                                Foreground="White"
                                Text="Settings" />
                        </StackPanel>
                    </Grid>
                </Grid>

                <!--  Create Server Page (Initially Hidden)  -->
                <Grid x:Name="CreateServerPage" Visibility="Collapsed">
                    <Grid Background="#1C2127">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--  Background for the world creation progress  -->
                        <Border
                            x:Name="BackgroundOverlay"
                            Grid.ColumnSpan="2"
                            Background="#80000000"
                            Visibility="Collapsed">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock x:Name="DescriptionParagraph" Margin="0,0,0,10" />
                                <StackPanel>
                                    <ProgressBar
                                        x:Name="ProgressBar"
                                        Width="300"
                                        Height="20" />
                                    <TextBlock x:Name="ProgressParagraph" HorizontalAlignment="Center" />
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <Grid>
                                    <Grid.Resources>
                                        <Style x:Key="SettingsItem" TargetType="Border">
                                            <Setter Property="Margin" Value="15" />
                                            <Setter Property="MinWidth" Value="250" />
                                            <Setter Property="Height" Value="50" />
                                            <Setter Property="Padding" Value="10,5" />
                                            <Setter Property="Background" Value="#1C2127" />
                                            <Setter Property="CornerRadius" Value="15" />
                                        </Style>

                                        <Style x:Key="SettingsVersionsItem" TargetType="Border">
                                            <Setter Property="Margin" Value="10,0" />
                                            <Setter Property="Padding" Value="12,7" />
                                            <Setter Property="Background" Value="#262A32" />
                                            <Setter Property="CornerRadius" Value="15" />
                                        </Style>

                                        <Style x:Key="DefaultTitleTextStyle" TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="White" />
                                            <Setter Property="FontSize" Value="20" />
                                            <Setter Property="FontWeight" Value="Bold" />
                                        </Style>

                                        <Style x:Key="DefaultTextStyle" TargetType="TextBlock">
                                            <Setter Property="Grid.Column" Value="0" />
                                            <Setter Property="HorizontalAlignment" Value="Left" />
                                            <Setter Property="Margin" Value="0,0,15,0" />
                                            <Setter Property="Foreground" Value="White" />
                                            <Setter Property="FontSize" Value="18" />
                                            <Setter Property="VerticalAlignment" Value="Center" />
                                        </Style>

                                        <Style x:Key="InputTextBoxStyleServerName" TargetType="TextBox">
                                            <Setter Property="Grid.Column" Value="1" />
                                            <Setter Property="HorizontalAlignment" Value="Right" />
                                            <Setter Property="VerticalContentAlignment" Value="Center" />
                                            <Setter Property="FontSize" Value="20" />
                                            <Setter Property="Background" Value="#262A32" />
                                            <Setter Property="Foreground" Value="White" />
                                            <Setter Property="BorderThickness" Value="0" />
                                        </Style>

                                        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
                                            <Setter Property="Width" Value="75" />
                                            <Setter Property="Height" Value="30" />
                                            <Setter Property="FontSize" Value="16" />
                                            <Setter Property="Padding" Value="5,0,0,0" />
                                            <Setter Property="Background" Value="#262A32" />
                                            <Setter Property="Foreground" Value="White" />
                                            <Setter Property="BorderThickness" Value="0" />
                                            <Setter Property="Margin" Value="0,2,0,2" />
                                            <Setter Property="Grid.Column" Value="1" />
                                            <Setter Property="HorizontalAlignment" Value="Right" />
                                            <Setter Property="VerticalContentAlignment" Value="Center" />
                                            <Setter Property="HorizontalScrollBarVisibility" Value="Auto" />
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="TextBox">
                                                        <Border
                                                            Background="{TemplateBinding Background}"
                                                            CornerRadius="6"
                                                            SnapsToDevicePixels="True">
                                                            <ScrollViewer
                                                                x:Name="PART_ContentHost"
                                                                Margin="0"
                                                                Padding="{TemplateBinding Padding}" />
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>

                                        <Style x:Key="InputItemTextBoxStyle" TargetType="Border">
                                            <Setter Property="Background" Value="#262A32" />
                                            <Setter Property="CornerRadius" Value="15" />
                                            <Setter Property="Padding" Value="15,12" />
                                        </Style>

                                        <Style x:Key="InputComboBoxStyle" TargetType="ComboBox">
                                            <Setter Property="Grid.Column" Value="1" />
                                            <Setter Property="HorizontalAlignment" Value="Right" />
                                            <Setter Property="SelectedIndex" Value="0" />
                                            <Setter Property="Cursor" Value="Hand" />
                                            <Setter Property="Width" Value="110" />
                                            <Setter Property="Height" Value="30" />
                                            <Setter Property="VerticalContentAlignment" Value="Center" />
                                            <Setter Property="FontSize" Value="14" />
                                            <Setter Property="Foreground" Value="White" />
                                            <Setter Property="Background" Value="#262A32" />
                                            <Setter Property="BorderThickness" Value="0" />
                                            <Setter Property="Padding" Value="5" />
                                            <Setter Property="Margin" Value="0,2,0,2" />
                                            <Setter Property="MaxDropDownHeight" Value="250" />
                                            <Setter Property="ItemContainerStyle">
                                                <Setter.Value>
                                                    <Style TargetType="ListBoxItem">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="ListBoxItem">
                                                                    <Border
                                                                        x:Name="Bd"
                                                                        Padding="7,4"
                                                                        Background="{TemplateBinding Background}"
                                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                                        CornerRadius="6"
                                                                        SnapsToDevicePixels="True">
                                                                        <ContentPresenter
                                                                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                                            SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                                                    </Border>
                                                                    <ControlTemplate.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter Property="Cursor" Value="Hand" />
                                                                            <Setter TargetName="Bd" Property="Background" Value="#2c303a" />
                                                                            <Setter Property="Foreground" Value="White" />
                                                                        </Trigger>
                                                                        <Trigger Property="IsSelected" Value="True">
                                                                            <Setter TargetName="Bd" Property="Background" Value="#373c49" />
                                                                            <Setter Property="Foreground" Value="White" />
                                                                        </Trigger>
                                                                    </ControlTemplate.Triggers>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </Setter.Value>
                                            </Setter>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ComboBox">
                                                        <Grid>
                                                            <Border
                                                                x:Name="Border"
                                                                Background="{TemplateBinding Background}"
                                                                BorderThickness="0"
                                                                CornerRadius="6"
                                                                SnapsToDevicePixels="True">
                                                                <Grid>
                                                                    <ContentPresenter
                                                                        x:Name="ContentSite"
                                                                        Margin="10,0,30,0"
                                                                        HorizontalAlignment="Left"
                                                                        VerticalAlignment="Center"
                                                                        Content="{TemplateBinding SelectionBoxItem}"
                                                                        ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                                        ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}" />

                                                                    <Canvas
                                                                        x:Name="ArrowCanvas"
                                                                        Width="12"
                                                                        Height="12"
                                                                        Margin="0,0,10,0"
                                                                        HorizontalAlignment="Right"
                                                                        VerticalAlignment="Center"
                                                                        RenderTransformOrigin="0.5,0.5">
                                                                        <Canvas.RenderTransform>
                                                                            <RotateTransform x:Name="ArrowRotation" Angle="0" />
                                                                        </Canvas.RenderTransform>
                                                                        <Line
                                                                            Stroke="White"
                                                                            StrokeEndLineCap="Round"
                                                                            StrokeStartLineCap="Round"
                                                                            StrokeThickness="2"
                                                                            X1="3"
                                                                            X2="6"
                                                                            Y1="4"
                                                                            Y2="7" />

                                                                        <Line
                                                                            Stroke="White"
                                                                            StrokeEndLineCap="Round"
                                                                            StrokeStartLineCap="Round"
                                                                            StrokeThickness="2"
                                                                            X1="9"
                                                                            X2="6"
                                                                            Y1="4"
                                                                            Y2="7" />
                                                                    </Canvas>
                                                                </Grid>
                                                            </Border>

                                                            <Popup
                                                                x:Name="Popup"
                                                                MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                                                AllowsTransparency="True"
                                                                Focusable="False"
                                                                IsOpen="{TemplateBinding IsDropDownOpen}"
                                                                Placement="Bottom"
                                                                PopupAnimation="Slide">

                                                                <Border
                                                                    Width="{TemplateBinding Width}"
                                                                    Padding="5"
                                                                    Background="#21242c"
                                                                    CornerRadius="6"
                                                                    SnapsToDevicePixels="True">
                                                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                                                        <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                                                    </ScrollViewer>
                                                                </Border>
                                                            </Popup>
                                                        </Grid>

                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsDropDownOpen" Value="True">
                                                                <Trigger.EnterActions>
                                                                    <BeginStoryboard>
                                                                        <Storyboard>
                                                                            <DoubleAnimation
                                                                                Storyboard.TargetName="ArrowRotation"
                                                                                Storyboard.TargetProperty="Angle"
                                                                                To="180"
                                                                                Duration="0:0:0.2" />
                                                                        </Storyboard>
                                                                    </BeginStoryboard>
                                                                </Trigger.EnterActions>
                                                                <Trigger.ExitActions>
                                                                    <BeginStoryboard>
                                                                        <Storyboard>
                                                                            <DoubleAnimation
                                                                                Storyboard.TargetName="ArrowRotation"
                                                                                Storyboard.TargetProperty="Angle"
                                                                                To="0"
                                                                                Duration="0:0:0.2" />
                                                                        </Storyboard>
                                                                    </BeginStoryboard>
                                                                </Trigger.ExitActions>
                                                            </Trigger>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="Border" Property="Background" Value="#2c313a" />
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>

                                        <Style x:Key="ToggleCheckBoxStyle" TargetType="CheckBox">
                                            <Setter Property="Grid.Column" Value="1" />
                                            <Setter Property="HorizontalAlignment" Value="Right" />
                                            <Setter Property="Cursor" Value="Hand" />
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type CheckBox}">
                                                        <Grid>
                                                            <!--  Background bar  -->
                                                            <Rectangle
                                                                x:Name="Background"
                                                                Width="50"
                                                                Height="32"
                                                                Fill="#262A32"
                                                                RadiusX="16"
                                                                RadiusY="16" />

                                                            <!--  Toggle ellipse with animations  -->
                                                            <Ellipse
                                                                x:Name="Thumb"
                                                                Width="25"
                                                                Height="25"
                                                                Margin="4"
                                                                HorizontalAlignment="Left"
                                                                VerticalAlignment="Center">
                                                                <Ellipse.Fill>
                                                                    <SolidColorBrush x:Name="ThumbBrush" Color="#F62451" />
                                                                </Ellipse.Fill>
                                                                <Ellipse.RenderTransform>
                                                                    <TranslateTransform x:Name="ThumbTransform" X="0" />
                                                                </Ellipse.RenderTransform>
                                                            </Ellipse>

                                                            <!--  Centered icon container with animations  -->
                                                            <Grid
                                                                x:Name="IconContainer"
                                                                Width="28"
                                                                Height="28"
                                                                Margin="2"
                                                                HorizontalAlignment="Left"
                                                                VerticalAlignment="Center">
                                                                <Grid.RenderTransform>
                                                                    <TranslateTransform x:Name="IconTransform" X="0" />
                                                                </Grid.RenderTransform>

                                                                <!--  Cross Icon with opacity animation  -->
                                                                <Grid
                                                                    x:Name="CrossIcon"
                                                                    HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"
                                                                    Opacity="1"
                                                                    RenderTransformOrigin="0.5,0.5">
                                                                    <Grid.RenderTransform>
                                                                        <TransformGroup>
                                                                            <ScaleTransform />
                                                                            <SkewTransform />
                                                                            <RotateTransform />
                                                                            <TranslateTransform X="-1" Y="-1" />
                                                                        </TransformGroup>
                                                                    </Grid.RenderTransform>
                                                                    <Line
                                                                        Stroke="White"
                                                                        StrokeEndLineCap="Round"
                                                                        StrokeStartLineCap="Round"
                                                                        StrokeThickness="2.8"
                                                                        X1="4"
                                                                        X2="14"
                                                                        Y1="4"
                                                                        Y2="14" />
                                                                    <Line
                                                                        Stroke="White"
                                                                        StrokeEndLineCap="Round"
                                                                        StrokeStartLineCap="Round"
                                                                        StrokeThickness="2.8"
                                                                        X1="4"
                                                                        X2="14"
                                                                        Y1="14"
                                                                        Y2="4" />
                                                                </Grid>

                                                                <!--  Checkmark Icon with opacity animation  -->
                                                                <Grid
                                                                    x:Name="CheckIcon"
                                                                    HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"
                                                                    Opacity="0"
                                                                    RenderTransformOrigin="0.5,0.5">
                                                                    <Grid.RenderTransform>
                                                                        <TransformGroup>
                                                                            <ScaleTransform />
                                                                            <SkewTransform />
                                                                            <RotateTransform />
                                                                            <TranslateTransform X="-1" Y="-1" />
                                                                        </TransformGroup>
                                                                    </Grid.RenderTransform>
                                                                    <Path
                                                                        Data="M3,10 L7,14 L14,4"
                                                                        Stroke="White"
                                                                        StrokeEndLineCap="Round"
                                                                        StrokeLineJoin="Round"
                                                                        StrokeStartLineCap="Round"
                                                                        StrokeThickness="2.8" />
                                                                </Grid>
                                                            </Grid>
                                                        </Grid>

                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsChecked" Value="True">
                                                                <Trigger.EnterActions>
                                                                    <BeginStoryboard>
                                                                        <Storyboard>
                                                                            <!--  Thumb animations  -->
                                                                            <DoubleAnimation
                                                                                DecelerationRatio="0.5"
                                                                                Storyboard.TargetName="ThumbTransform"
                                                                                Storyboard.TargetProperty="X"
                                                                                To="18"
                                                                                Duration="0:0:0.2" />

                                                                            <ColorAnimation
                                                                                Storyboard.TargetName="ThumbBrush"
                                                                                Storyboard.TargetProperty="Color"
                                                                                To="#1FD78D"
                                                                                Duration="0:0:0.2" />

                                                                            <!--  Icon container animation  -->
                                                                            <DoubleAnimation
                                                                                DecelerationRatio="0.5"
                                                                                Storyboard.TargetName="IconTransform"
                                                                                Storyboard.TargetProperty="X"
                                                                                To="18"
                                                                                Duration="0:0:0.2" />

                                                                            <!--  Cross fade out  -->
                                                                            <DoubleAnimation
                                                                                BeginTime="0:0:0.05"
                                                                                Storyboard.TargetName="CrossIcon"
                                                                                Storyboard.TargetProperty="Opacity"
                                                                                To="0"
                                                                                Duration="0:0:0.15" />

                                                                            <!--  Checkmark fade in  -->
                                                                            <DoubleAnimation
                                                                                BeginTime="0:0:0.05"
                                                                                Storyboard.TargetName="CheckIcon"
                                                                                Storyboard.TargetProperty="Opacity"
                                                                                To="1"
                                                                                Duration="0:0:0.15" />
                                                                        </Storyboard>
                                                                    </BeginStoryboard>
                                                                </Trigger.EnterActions>
                                                                <Trigger.ExitActions>
                                                                    <BeginStoryboard>
                                                                        <Storyboard>
                                                                            <!--  Thumb animations  -->
                                                                            <DoubleAnimation
                                                                                DecelerationRatio="0.5"
                                                                                Storyboard.TargetName="ThumbTransform"
                                                                                Storyboard.TargetProperty="X"
                                                                                To="0"
                                                                                Duration="0:0:0.2" />

                                                                            <ColorAnimation
                                                                                Storyboard.TargetName="ThumbBrush"
                                                                                Storyboard.TargetProperty="Color"
                                                                                To="#F62451"
                                                                                Duration="0:0:0.2" />

                                                                            <!--  Icon container animation  -->
                                                                            <DoubleAnimation
                                                                                DecelerationRatio="0.5"
                                                                                Storyboard.TargetName="IconTransform"
                                                                                Storyboard.TargetProperty="X"
                                                                                To="0"
                                                                                Duration="0:0:0.2" />

                                                                            <!--  Cross fade in  -->
                                                                            <DoubleAnimation
                                                                                Storyboard.TargetName="CrossIcon"
                                                                                Storyboard.TargetProperty="Opacity"
                                                                                To="1"
                                                                                Duration="0:0:0.15" />

                                                                            <!--  Checkmark fade out  -->
                                                                            <DoubleAnimation
                                                                                Storyboard.TargetName="CheckIcon"
                                                                                Storyboard.TargetProperty="Opacity"
                                                                                To="0"
                                                                                Duration="0:0:0.15" />
                                                                        </Storyboard>
                                                                    </BeginStoryboard>
                                                                </Trigger.ExitActions>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Setter Property="Margin" Value="0,2,0,2" />
                                        </Style>

                                        <Style x:Key="CreateButtonStyle" TargetType="Button">
                                            <Setter Property="Width" Value="150" />
                                            <Setter Property="Height" Value="50" />
                                            <Setter Property="Background" Value="#FF4CAF50" />
                                            <Setter Property="Foreground" Value="White" />
                                            <Setter Property="BorderThickness" Value="0" />
                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                            <Setter Property="Padding" Value="10,5" />
                                            <Setter Property="Margin" Value="0,25,0,5" />
                                            <Setter Property="FontSize" Value="25" />
                                            <Setter Property="FontWeight" Value="Bold" />
                                            <Setter Property="Cursor" Value="Hand" />

                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border
                                                            x:Name="border"
                                                            Background="{TemplateBinding Background}"
                                                            CornerRadius="8"
                                                            SnapsToDevicePixels="True">
                                                            <ContentPresenter
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"
                                                                RecognizesAccessKey="True" />
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="border" Property="Background" Value="#FF66BB6A" />
                                                            </Trigger>
                                                            <Trigger Property="IsPressed" Value="True">
                                                                <Setter TargetName="border" Property="Background" Value="#FF388E3C" />
                                                                <Setter TargetName="border" Property="RenderTransform">
                                                                    <Setter.Value>
                                                                        <ScaleTransform ScaleX="0.97" ScaleY="0.97" />
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </Trigger>
                                                            <Trigger Property="IsPressed" Value="False">
                                                                <Setter TargetName="border" Property="RenderTransform">
                                                                    <Setter.Value>
                                                                        <ScaleTransform ScaleX="1" ScaleY="1" />
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </Trigger>
                                                            <Trigger Property="IsEnabled" Value="False">
                                                                <Setter TargetName="border" Property="Background" Value="#FFC8E6C9" />
                                                                <Setter Property="Foreground" Value="#FF9E9E9E" />
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Grid.Resources>

                                    <Grid Margin="10" VerticalAlignment="Top">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <Grid Grid.Row="0" Margin="0,10,0,10">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <Grid Grid.Row="0">
                                                <TextBlock
                                                    Margin="0,0,0,5"
                                                    VerticalAlignment="Center"
                                                    Style="{StaticResource DefaultTitleTextStyle}"
                                                    Text="Server Name" />
                                            </Grid>
                                            <Grid Grid.Row="1">
                                                <Border Style="{StaticResource InputItemTextBoxStyle}">
                                                    <TextBox
                                                        x:Name="ServerNameInput"
                                                        HorizontalAlignment="Stretch"
                                                        Background="Transparent"
                                                        CaretBrush="White"
                                                        HorizontalScrollBarVisibility="Auto"
                                                        MaxLength="15"
                                                        Style="{StaticResource InputTextBoxStyleServerName}" />
                                                </Border>
                                            </Grid>
                                        </Grid>

                                        <Grid Grid.Row="1" Margin="0,10,0,10">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <Grid Grid.Row="0">
                                                <TextBlock
                                                    Margin="0,0,0,5"
                                                    Style="{StaticResource DefaultTitleTextStyle}"
                                                    Text="Version" />
                                            </Grid>
                                            <Grid Grid.Row="1">
                                                <Border HorizontalAlignment="Center" Style="{StaticResource InputItemTextBoxStyle}">
                                                    <WrapPanel HorizontalAlignment="Center">
                                                        <Border Style="{StaticResource SettingsItem}">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*" />
                                                                    <ColumnDefinition Width="*" />
                                                                </Grid.ColumnDefinitions>
                                                                <TextBlock Style="{StaticResource DefaultTextStyle}" Text="Software" />
                                                                <ComboBox
                                                                    x:Name="SoftwareChangeBox"
                                                                    SelectionChanged="ChangeSupportedVersions"
                                                                    Style="{StaticResource InputComboBoxStyle}" />
                                                            </Grid>
                                                        </Border>

                                                        <Border Style="{StaticResource SettingsItem}">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*" />
                                                                    <ColumnDefinition Width="*" />
                                                                </Grid.ColumnDefinitions>
                                                                <TextBlock Style="{StaticResource DefaultTextStyle}" Text="Version" />
                                                                <ComboBox x:Name="VersionsChangeBox" Style="{StaticResource InputComboBoxStyle}" />
                                                            </Grid>
                                                        </Border>
                                                    </WrapPanel>
                                                </Border>
                                            </Grid>
                                        </Grid>

                                        <Grid Grid.Row="2" Margin="0,10">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <Grid Grid.Row="0">
                                                <TextBlock
                                                    Margin="0,0,0,5"
                                                    Style="{StaticResource DefaultTitleTextStyle}"
                                                    Text="Options" />
                                            </Grid>
                                            <Grid Grid.Row="1">
                                                <Border Style="{StaticResource InputItemTextBoxStyle}">
                                                    <Grid>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto" />
                                                            <RowDefinition Height="Auto" />
                                                        </Grid.RowDefinitions>

                                                        <Grid Grid.Row="0" Margin="0,0,0,10">
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock
                                                                    Margin="0,0,10,0"
                                                                    VerticalAlignment="Bottom"
                                                                    FontFamily="Segoe MDL2 Assets"
                                                                    FontSize="20"
                                                                    Foreground="White"
                                                                    Text="&#xE116;" />
                                                                <TextBlock Style="{StaticResource DefaultTextStyle}" Text="server.properties" />
                                                            </StackPanel>
                                                        </Grid>

                                                        <Grid Grid.Row="1">
                                                            <WrapPanel HorizontalAlignment="Center">
                                                                <Border Style="{StaticResource SettingsItem}">
                                                                    <Grid>
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="*" />
                                                                            <ColumnDefinition Width="*" />
                                                                        </Grid.ColumnDefinitions>

                                                                        <TextBlock Style="{StaticResource DefaultTextStyle}" Text="Slots" />
                                                                        <TextBox x:Name="SlotsInput" Style="{StaticResource InputTextBoxStyle}" />
                                                                    </Grid>
                                                                </Border>

                                                                <Border Style="{StaticResource SettingsItem}">
                                                                    <Grid>
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="*" />
                                                                            <ColumnDefinition Width="*" />
                                                                        </Grid.ColumnDefinitions>
                                                                        <TextBlock Style="{StaticResource DefaultTextStyle}" Text="Gamemode" />
                                                                        <ComboBox x:Name="GamemodeComboBox" Style="{StaticResource InputComboBoxStyle}">
                                                                            <sys:String>Survival</sys:String>
                                                                            <sys:String>Creative</sys:String>
                                                                            <sys:String>Adventure</sys:String>
                                                                            <sys:String>Spectator</sys:String>
                                                                        </ComboBox>
                                                                    </Grid>
                                                                </Border>

                                                                <Border Style="{StaticResource SettingsItem}">
                                                                    <Grid>
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="*" />
                                                                            <ColumnDefinition Width="*" />
                                                                        </Grid.ColumnDefinitions>
                                                                        <TextBlock Style="{StaticResource DefaultTextStyle}" Text="Difficulty" />
                                                                        <ComboBox
                                                                            x:Name="DifficultyComboBox"
                                                                            SelectedIndex="2"
                                                                            Style="{StaticResource InputComboBoxStyle}">
                                                                            <sys:String>Peaceful</sys:String>
                                                                            <sys:String>Easy</sys:String>
                                                                            <sys:String>Normal</sys:String>
                                                                            <sys:String>Hard</sys:String>
                                                                        </ComboBox>
                                                                    </Grid>
                                                                </Border>

                                                                <Border Style="{StaticResource SettingsItem}">
                                                                    <Grid>
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="*" />
                                                                            <ColumnDefinition Width="*" />
                                                                        </Grid.ColumnDefinitions>
                                                                        <TextBlock Style="{StaticResource DefaultTextStyle}" Text="Whitelist" />
                                                                        <CheckBox x:Name="WhitelistCheckBox" Style="{StaticResource ToggleCheckBoxStyle}" />
                                                                    </Grid>
                                                                </Border>

                                                                <Border Style="{StaticResource SettingsItem}">
                                                                    <Grid>
                                                                        <Grid.ColumnDefinitions>
