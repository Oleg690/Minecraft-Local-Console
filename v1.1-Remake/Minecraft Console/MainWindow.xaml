<Window
    x:Class="Minecraft_Console.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Minecraft_Console"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    x:Name="Window"
    Title="Minecraft Console"
    Width="1200"
    Height="700"
    Icon="pack://application:,,,/assets/icons/Logo/logo.ico"
    mc:Ignorable="d">
    <Window.Resources>
        <SolidColorBrush x:Key="StatusBrush" Color="#FF3535" />

        <Style x:Key="ServerCardFont" TargetType="TextBlock">
            <Setter Property="TextBlock.FontFamily" Value="pack://application:,,,/assets/Fonts/Jomhuria/#Jomhuria" />
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="TextBlock.FontFamily" Value="pack://application:,,,/assets/Fonts/Istok Web/#Istok Web" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="TextBlock.FontFamily" Value="pack://application:,,,/assets/Fonts/Istok Web/#Istok Web" />
        </Style>

        <Style x:Key="ArhiveButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#1974da" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="FontSize" Value="22" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="8"
                            RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="scaleTransform" ScaleX="1" ScaleY="1" />
                            </Border.RenderTransform>
                            <ContentPresenter
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                RecognizesAccessKey="True" />

                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">

                                    <!--  Normal state  -->
                                    <VisualState x:Name="Normal" />

                                    <!--  MouseOver  -->
                                    <VisualState x:Name="MouseOver">
                                        <Storyboard>
                                            <ColorAnimation
                                                Storyboard.TargetName="border"
                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                To="#2781e6"
                                                Duration="0:0:0.2" />
                                        </Storyboard>
                                    </VisualState>

                                    <!--  Pressed  -->
                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <ColorAnimation
                                                Storyboard.TargetName="border"
                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                To="#1768c3"
                                                Duration="0:0:0.1" />
                                            <DoubleAnimation
                                                Storyboard.TargetName="scaleTransform"
                                                Storyboard.TargetProperty="ScaleX"
                                                To="0.97"
                                                Duration="0:0:0.1" />
                                            <DoubleAnimation
                                                Storyboard.TargetName="scaleTransform"
                                                Storyboard.TargetProperty="ScaleY"
                                                To="0.97"
                                                Duration="0:0:0.1" />
                                        </Storyboard>
                                    </VisualState>

                                    <!--  Disabled  -->
                                    <VisualState x:Name="Disabled">
                                        <Storyboard>
                                            <ColorAnimation
                                                Storyboard.TargetName="border"
                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                To="#4d90db"
                                                Duration="0:0:0.2" />
                                            <!--<ColorAnimation
                                                Storyboard.TargetName="border"
                                                Storyboard.TargetProperty="(Button.Foreground).(SolidColorBrush.Color)"
                                                To="#FF9E9E9E"
                                                Duration="0:0:0.2" />-->
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>

                                <VisualStateGroup x:Name="FocusStates">
                                    <VisualState x:Name="Focused" />
                                    <VisualState x:Name="Unfocused" />
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DeleteButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#df2c29" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="FontSize" Value="22" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="8"
                            RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="scaleTransform" ScaleX="1" ScaleY="1" />
                            </Border.RenderTransform>
                            <ContentPresenter
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                RecognizesAccessKey="True" />

                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">

                                    <!--  Normal state  -->
                                    <VisualState x:Name="Normal" />

                                    <!--  MouseOver  -->
                                    <VisualState x:Name="MouseOver">
                                        <Storyboard>
                                            <ColorAnimation
                                                Storyboard.TargetName="border"
                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                To="#e63a37"
                                                Duration="0:0:0.2" />
                                        </Storyboard>
                                    </VisualState>

                                    <!--  Pressed  -->
                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <ColorAnimation
                                                Storyboard.TargetName="border"
                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                To="#cf221f"
                                                Duration="0:0:0.1" />
                                            <DoubleAnimation
                                                Storyboard.TargetName="scaleTransform"
                                                Storyboard.TargetProperty="ScaleX"
                                                To="0.97"
                                                Duration="0:0:0.1" />
                                            <DoubleAnimation
                                                Storyboard.TargetName="scaleTransform"
                                                Storyboard.TargetProperty="ScaleY"
                                                To="0.97"
                                                Duration="0:0:0.1" />
                                        </Storyboard>
                                    </VisualState>

                                    <!--  Disabled  -->
                                    <VisualState x:Name="Disabled">
                                        <Storyboard>
                                            <ColorAnimation
                                                Storyboard.TargetName="border"
                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                To="#c44745"
                                                Duration="0:0:0.2" />
                                            <!--<ColorAnimation
                                                Storyboard.TargetName="border"
                                                Storyboard.TargetProperty="(Button.Foreground).(SolidColorBrush.Color)"
                                                To="#FF9E9E9E"
                                                Duration="0:0:0.2" />-->
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>

                                <VisualStateGroup x:Name="FocusStates">
                                    <VisualState x:Name="Focused" />
                                    <VisualState x:Name="Unfocused" />
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  1. Style for the buttons to be invisible  -->
        <Style x:Key="InvisibleScrollBarButton" TargetType="{x:Type RepeatButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type RepeatButton}">
                        <Border Background="Transparent" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  2. Style for the thumb  -->
        <Style x:Key="ModernScrollThumb" TargetType="{x:Type Thumb}">
            <Setter Property="Margin" Value="0,2" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Border
                            Background="#3D4045"
                            BorderThickness="0"
                            CornerRadius="4" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Width" Value="12" />
            <!--  Comfortable width  -->
        </Style>

        <!--  3. Main ScrollBar style  -->
        <Style TargetType="{x:Type ScrollBar}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid Background="Transparent">
                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                <!--  Top/Left button (hidden)  -->
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.PageUpCommand" Style="{StaticResource InvisibleScrollBarButton}" />
                                </Track.DecreaseRepeatButton>

                                <!--  The draggable thumb  -->
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource ModernScrollThumb}" />
                                </Track.Thumb>

                                <!--  Bottom/Right button (hidden)  -->
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.PageDownCommand" Style="{StaticResource InvisibleScrollBarButton}" />
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!--  Popup Window  -->
        <Grid
            x:Name="PopupHost"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Panel.ZIndex="1000" />

        <!--  Loading Animation  -->
        <Grid
            x:Name="LoadingScreen"
            Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Window}}"
            Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Window}}"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Panel.ZIndex="100"
            Background="#B3B8B8B8"
            Visibility="Collapsed">
            <Image
                Name="gifImage"
                Width="200"
                Margin="0,-100,-20,0" />
            <Label
                Name="LoadingLabel"
                Margin="0,50,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="Loading..."
                FontSize="20"
                FontWeight="Bold"
                Foreground="White" />
            <Border
                x:Name="loadingBarOutPadding"
                Width="410"
                Height="40"
                Margin="0,150,0,0"
                Background="#A2A2A2"
                CornerRadius="15">
                <Border
                    x:Name="progresBar"
                    Width="400"
                    Margin="5"
                    HorizontalAlignment="Left"
                    Background="#85FF4C"
                    CornerRadius="10" />
            </Border>
        </Grid>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15*" MaxWidth="250" />
                <ColumnDefinition Width="80*" />
            </Grid.ColumnDefinitions>

            <!--  Sidebar  -->
            <Grid
                Grid.Column="0"
                HorizontalAlignment="Stretch"
                Background="#262A32">
                <Grid.Resources>
                    <Style x:Key="SidebarButtonStyle" TargetType="Button">
                        <Setter Property="Margin" Value="0,5" />
                        <Setter Property="Height" Value="60" />
                        <Setter Property="HorizontalAlignment" Value="Stretch" />
                        <Setter Property="Cursor" Value="Hand" />
                        <Setter Property="FontWeight" Value="Bold" />
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="BorderBrush" Value="Transparent" />
                        <Setter Property="FontSize" Value="25" />
                        <Setter Property="Foreground" Value="White" />
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                        <Setter Property="Padding" Value="20,10" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}">
                                        <ContentPresenter
                                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                            Content="{TemplateBinding Content}"
                                            ContentTemplate="{TemplateBinding ContentTemplate}"
                                            RecognizesAccessKey="True" />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#2F333D" />
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#1E2127" />
                                        </Trigger>

                                        <Trigger Property="local:ButtonExtensions.IsSidebarSelected" Value="True">
                                            <Setter Property="Background" Value="#22262D" />
                                            <Setter Property="Foreground" Value="#FEC538" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Grid.Resources>

                <StackPanel
                    x:Name="sidebarStackPanel"
                    Margin="0,20"
                    VerticalAlignment="Top">
                    <Image
                        Height="40"
                        Margin="20,10"
                        Source="pack://application:,,,/assets/icons/Logo/minehost.png" />
                    <Button
                        Click="NavigateToServers"
                        Content="Servers"
                        Style="{StaticResource SidebarButtonStyle}"
                        Tag="Servers" />
                    <Button
                        Click="NavigateToProfile"
                        Content="Profile"
                        Style="{StaticResource SidebarButtonStyle}"
                        Tag="Profile" />
                    <Button
                        Click="NavigateToSettings"
                        Content="Settings"
                        Style="{StaticResource SidebarButtonStyle}"
                        Tag="Profile" />
                    <Button
                        Click="NavigateToSupport"
                        Content="Support"
                        Style="{StaticResource SidebarButtonStyle}"
                        Tag="Support" />
                </StackPanel>
            </Grid>

            <!--  Main Content Area  -->
            <Grid Grid.Column="1">
                <Grid
                    x:Name="MainContent"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch" />

                <!--  Server Control Panel (Initially Hidden)  -->
                <Grid Panel.ZIndex="-1" Background="#1C2127">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid
                        x:Name="ServerControlPanelDropBox"
                        Grid.Row="0"
                        Panel.ZIndex="1000">
                        <Grid.Resources>
                            <Style x:Key="InputComboBoxStyle" TargetType="ComboBox">
                                <Setter Property="Grid.Column" Value="1" />
                                <Setter Property="HorizontalAlignment" Value="Right" />
                                <Setter Property="SelectedIndex" Value="0" />
                                <Setter Property="Cursor" Value="Hand" />
                                <Setter Property="Width" Value="100" />
                                <Setter Property="Height" Value="30" />
                                <Setter Property="VerticalContentAlignment" Value="Center" />
                                <Setter Property="FontSize" Value="14" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="Background" Value="#802C303A" />
                                <Setter Property="BorderThickness" Value="0" />
                                <Setter Property="Padding" Value="5" />
                                <Setter Property="Margin" Value="0,2,0,2" />
                                <Setter Property="MaxDropDownHeight" Value="250" />
                                <Setter Property="ItemContainerStyle">
                                    <Setter.Value>
                                        <Style TargetType="ListBoxItem">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ListBoxItem">
                                                        <Border
                                                            x:Name="Bd"
                                                            Width="{TemplateBinding Width}"
                                                            Padding="7,4"
                                                            Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="6"
                                                            SnapsToDevicePixels="True">
                                                            <ContentPresenter
                                                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Cursor" Value="Hand" />
                                                                <Setter TargetName="Bd" Property="Background" Value="#2c303a" />
                                                                <Setter Property="Opacity" Value="1" />
                                                                <Setter Property="Foreground" Value="White" />
                                                            </Trigger>
                                                            <Trigger Property="IsSelected" Value="True">
                                                                <Setter TargetName="Bd" Property="Background" Value="#373c49" />
                                                                <Setter Property="Foreground" Value="White" />
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ComboBox">
                                            <Grid>
                                                <Border
                                                    x:Name="Border"
                                                    Padding="5"
                                                    Background="{TemplateBinding Background}"
                                                    BorderThickness="0"
                                                    CornerRadius="6"
                                                    SnapsToDevicePixels="True">
                                                    <Grid>
                                                        <ContentPresenter
                                                            x:Name="ContentSite"
                                                            Margin="10,0,30,0"
                                                            HorizontalAlignment="Left"
                                                            VerticalAlignment="Center"
                                                            Content="{TemplateBinding SelectionBoxItem}"
                                                            ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                            ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}">
                                                            <ContentPresenter.RenderTransform>
                                                                <TranslateTransform X="0" Y="-1" />
                                                            </ContentPresenter.RenderTransform>
                                                        </ContentPresenter>

                                                        <Canvas
                                                            x:Name="ArrowCanvas"
                                                            Width="12"
                                                            Height="12"
                                                            Margin="0,0,10,0"
                                                            HorizontalAlignment="Right"
                                                            VerticalAlignment="Center"
                                                            RenderTransformOrigin="0.5,0.5">
                                                            <Canvas.RenderTransform>
                                                                <RotateTransform x:Name="ArrowRotation" Angle="90" />
                                                            </Canvas.RenderTransform>
                                                            <Line
                                                                Stroke="White"
                                                                StrokeEndLineCap="Round"
                                                                StrokeStartLineCap="Round"
                                                                StrokeThickness="2"
                                                                X1="3"
                                                                X2="6"
                                                                Y1="4"
                                                                Y2="7" />

                                                            <Line
                                                                Stroke="White"
                                                                StrokeEndLineCap="Round"
                                                                StrokeStartLineCap="Round"
                                                                StrokeThickness="2"
                                                                X1="9"
                                                                X2="6"
                                                                Y1="4"
                                                                Y2="7" />
                                                        </Canvas>
                                                    </Grid>
                                                </Border>

                                                <Popup
                                                    x:Name="Popup"
                                                    MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                                    AllowsTransparency="True"
                                                    Focusable="False"
                                                    IsOpen="{TemplateBinding IsDropDownOpen}"
                                                    Placement="Right"
                                                    PopupAnimation="Slide">

                                                    <Border
                                                        Width="{TemplateBinding Width}"
                                                        Padding="5"
                                                        Background="#21242c"
                                                        CornerRadius="6"
                                                        SnapsToDevicePixels="True">
                                                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                                                            <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                                        </ScrollViewer>
                                                    </Border>
                                                </Popup>
                                            </Grid>

                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsDropDownOpen" Value="True">
                                                    <Trigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation
                                                                    Storyboard.TargetName="ArrowRotation"
                                                                    Storyboard.TargetProperty="Angle"
                                                                    From="90"
                                                                    To="270"
                                                                    Duration="0:0:0.2" />
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </Trigger.EnterActions>
                                                    <Trigger.ExitActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation
                                                                    Storyboard.TargetName="ArrowRotation"
                                                                    Storyboard.TargetProperty="Angle"
                                                                    From="270"
                                                                    To="90"
                                                                    Duration="0:0:0.2" />
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </Trigger.ExitActions>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="#2c313a" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Grid.Resources>
                        <ComboBox
                            x:Name="ServerDropBox"
                            Margin="10,10,10,10"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            SelectedIndex="0"
                            SelectionChanged="ServerControlPanelDropBoxChanged"
                            Style="{StaticResource InputComboBoxStyle}"
                            Visibility="Collapsed">
                            <ComboBoxItem Name="ManageCheckBox" Content="Manage" />
                            <ComboBoxItem Name="ConsoleCheckBox" Content="Console" />
                            <ComboBoxItem Name="FilesCheckBox" Content="Files" />
                            <ComboBoxItem Name="StatsCheckBox" Content="Stats" />
                            <ComboBoxItem Name="SettingsCheckBox" Content="Settings" />
                        </ComboBox>
                    </Grid>
                    <Grid
                        x:Name="Manage"
                        Grid.Row="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Visibility="Collapsed">

                        <Grid.Resources>
                            <Style x:Key="ButtonStyle" TargetType="Button">
                                <Setter Property="FontSize" Value="35" />
                                <Setter Property="Foreground" Value="White" />

                                <Setter Property="FontWeight" Value="Bold" />
                                <Setter Property="BorderThickness" Value="0" />
                                <Setter Property="Cursor" Value="Hand" />

                                <Setter Property="Width" Value="170" />
                                <Setter Property="Height" Value="80" />
                            </Style>

                            <Style x:Key="TextBlockDefaultStyle" TargetType="TextBlock">
                                <Setter Property="FontFamily" Value="pack://application:,,,/assets/Fonts/Istok Web/#Istok Web" />
                                <Setter Property="FontSize" Value="25" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="FontWeight" Value="Bold" />
                            </Style>
                        </Grid.Resources>
                        <Viewbox Stretch="Uniform" StretchDirection="DownOnly">
                            <Grid Margin="100">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <Grid
                                    Grid.Column="0"
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center">
                                    <Image
                                        Width="300"
                                        Height="450"
                                        Source="pack://application:,,,/assets/Minecraft_Photo.png"
                                        Stretch="UniformToFill">
                                        <Image.Clip>
                                            <RectangleGeometry
                                                RadiusX="20"
                                                RadiusY="20"
                                                Rect="0,0,300,450" />
                                        </Image.Clip>
                                    </Image>
                                </Grid>
                                <Grid Grid.Column="1" VerticalAlignment="Center">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <Button
                                            x:Name="StartBtn"
                                            Grid.Column="0"
                                            HorizontalAlignment="Right"
                                            Click="StartServer"
                                            Content="Start"
                                            IsEnabled="False"
                                            Style="{StaticResource ButtonStyle}">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border
                                                        x:Name="border"
                                                        Background="#2781E6"
                                                        CornerRadius="15"
                                                        SnapsToDevicePixels="True">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />

                                                        <Border.RenderTransform>
                                                            <ScaleTransform ScaleX="1" ScaleY="1" />
                                                        </Border.RenderTransform>
                                                        <Border.RenderTransformOrigin>0.5,0.5</Border.RenderTransformOrigin>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <!--  Hover  -->
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Trigger.EnterActions>
                                                                <BeginStoryboard>
                                                                    <Storyboard>
                                                                        <ColorAnimation
                                                                            Storyboard.TargetName="border"
                                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                            To="#4591EB"
                                                                            Duration="0:0:0.2" />
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </Trigger.EnterActions>
                                                            <Trigger.ExitActions>
                                                                <BeginStoryboard>
                                                                    <Storyboard>
                                                                        <ColorAnimation
                                                                            Storyboard.TargetName="border"
                                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                            To="#2781E6"
                                                                            Duration="0:0:0.2" />
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </Trigger.ExitActions>
                                                        </Trigger>

                                                        <!--  Pressed  -->
                                                        <Trigger Property="IsPressed" Value="True">
                                                            <Trigger.EnterActions>
                                                                <BeginStoryboard>
                                                                    <Storyboard>
                                                                        <DoubleAnimation
                                                                            Storyboard.TargetName="border"
                                                                            Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                                                            To="0.95"
                                                                            Duration="0:0:0.1" />
                                                                        <DoubleAnimation
                                                                            Storyboard.TargetName="border"
                                                                            Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                                                            To="0.95"
                                                                            Duration="0:0:0.1" />
                                                                    </Storyboard>
                                                                </BeginStoryboard>
