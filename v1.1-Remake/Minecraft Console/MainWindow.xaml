<Window
    x:Class="Minecraft_Console.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Minecraft_Console"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Window"
    Title="Minecraft Console"
    Width="1000"
    Height="600"
    Icon="D:\Minecraft-Server\v1.1-Remake\Minecraft Console\assets\icons\Logo\logo.ico"
    Loaded="OnLoaded"
    mc:Ignorable="d">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="TextBlock.FontFamily" Value="pack://application:,,,/assets/Fonts/Istok Web/#Istok Web" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="TextBlock.FontFamily" Value="pack://application:,,,/assets/Fonts/Istok Web/#Istok Web" />
        </Style>
        <Style TargetType="ListViewItem">
            <Setter Property="TextBlock.FontFamily" Value="pack://application:,,,/assets/Fonts/Istok Web/#Istok Web" />
        </Style>

        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="0,5" />
            <Setter Property="Height" Value="60" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="FontSize" Value="25" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="Padding" Value="20,10" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                Content="{TemplateBinding Content}"
                                ContentTemplate="{TemplateBinding ContentTemplate}"
                                RecognizesAccessKey="True" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2F333D" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1E2127" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=(local:ButtonExtensions.IsSidebarSelected)}" Value="True">
                    <Setter Property="Background" Value="#22262D" />
                    <Setter Property="Foreground" Value="#FEC538" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <!--  Loading Animation  -->
        <Grid
            x:Name="LoadingScreen"
            Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Window}}"
            Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Window}}"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Panel.ZIndex="100"
            Background="#B3B8B8B8"
            Visibility="Collapsed">
            <Image
                Name="gifImage"
                Width="200"
                Margin="0,-100,-20,0" />
            <Label
                Name="LoadingLabel"
                Margin="0,50,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="Loading..."
                FontSize="20"
                FontWeight="Bold"
                Foreground="White" />
            <Border
                x:Name="loadingBarOutPadding"
                Width="410"
                Height="40"
                Margin="0,150,0,0"
                Background="#A2A2A2"
                CornerRadius="15">
                <Border
                    x:Name="progresBar"
                    Width="400"
                    Margin="5"
                    HorizontalAlignment="Left"
                    Background="#85FF4C"
                    CornerRadius="10" />
            </Border>
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15*" MaxWidth="250" />
                <ColumnDefinition Width="80*" />
            </Grid.ColumnDefinitions>

            <!--  Sidebar  -->
            <Grid
                Grid.Column="0"
                HorizontalAlignment="Stretch"
                Background="#262A32">
                <StackPanel
                    x:Name="sidebarStackPanel"
                    Margin="0,20"
                    VerticalAlignment="Top">
                    <Image
                        Height="40"
                        Margin="20,10"
                        Source="D:\Minecraft-Server\v1.1-Remake\Minecraft Console\assets\icons\Logo\minehost.png" />
                    <Button
                        Click="NavigateToServers"
                        Content="Servers"
                        Style="{StaticResource SidebarButtonStyle}"
                        Tag="Servers" />
                    <Button
                        Click="NavigateToProfile"
                        Content="Profile"
                        Style="{StaticResource SidebarButtonStyle}"
                        Tag="Profile" />
                    <Button
                        Click="NavigateToSettings"
                        Content="Settings"
                        Style="{StaticResource SidebarButtonStyle}"
                        Tag="Profile" />
                    <Button
                        Click="NavigateToSupport"
                        Content="Support"
                        Style="{StaticResource SidebarButtonStyle}"
                        Tag="Support" />
                </StackPanel>
            </Grid>

            <!--  Main Content Area  -->
            <Grid Grid.Column="1">
                <Grid
                    x:Name="MainContent"
                    Margin="0,0,0,0"
                    VerticalAlignment="Top">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <Grid x:Name="ServerGrid" Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                        </Grid>
                    </ScrollViewer>
                </Grid>

                <!--  Server Control Panel (Initially Hidden)  -->
                <Grid Panel.ZIndex="-1" Background="#1C2127">
                    <Grid x:Name="ServerControlPanelDropBox">
                        <ComboBox
                            x:Name="ServerDropBox"
                            Width="100"
                            Height="25"
                            Margin="10,10,10,10"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            SelectedIndex="0"
                            SelectionChanged="ServerControlPanelDropBoxChanged"
                            Visibility="Collapsed">
                            <ComboBoxItem Name="ManageCheckBox" Content="Manage" />
                            <ComboBoxItem Name="ConsoleCheckBox" Content="Console" />
                            <ComboBoxItem Name="FilesCheckBox" Content="Files" />
                            <ComboBoxItem Name="StatsCheckBox" Content="Stats" />
                            <ComboBoxItem Name="SettingsCheckBox" Content="Settings" />
                        </ComboBox>
                    </Grid>
                    <Grid
                        x:Name="Manage"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Visibility="Visible">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Image
                            x:Name="ServerImage"
                            Grid.RowSpan="2"
                            Grid.Column="0"
                            Height="300"
                            MinWidth="200"
                            Margin="0,0,25,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Source="D:\Minecraft-Server\v1.1-Remake\Minecraft Console\assets\Minecraft_Photo.png"
                            Stretch="UniformToFill" />

                        <Grid
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="25">
                            <StackPanel Orientation="Horizontal">
                                <StackPanel.Resources>
                                    <Style x:Key="RoundedButtonStyle" TargetType="Button">
                                        <Setter Property="Cursor" Value="Hand" />
                                        <Setter Property="Width" Value="150" />
                                        <Setter Property="Height" Value="45" />
                                        <Setter Property="Margin" Value="5" />
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                        <Setter Property="VerticalContentAlignment" Value="Center" />
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Setter Property="FontSize" Value="20" />
                                        <Setter Property="FontWeight" Value="Bold" />
                                        <Setter Property="Foreground" Value="White" />
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border
                                                        Padding="{TemplateBinding Padding}"
                                                        Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="5">
                                                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Opacity" Value="0.9" />
                                                        </Trigger>
                                                        <Trigger Property="IsPressed" Value="True">
                                                            <Setter Property="Opacity" Value="0.7" />
                                                        </Trigger>
                                                        <Trigger Property="IsEnabled" Value="False">
                                                            <Setter Property="Opacity" Value="0.5" />
                                                            <Setter Property="Background" Value="#9E9E9E" />
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </StackPanel.Resources>
                                <Button
                                    Background="#2781E6"
                                    Click="StartServer"
                                    Content="Start"
                                    Style="{StaticResource RoundedButtonStyle}" />
                                <Button
                                    Background="#E92626"
                                    Click="StopServer"
                                    Content="Stop"
                                    IsEnabled="False"
                                    Style="{StaticResource RoundedButtonStyle}" />
                                <Button
                                    Background="#B921FF"
                                    Click="RestartServer"
                                    Content="Restart"
                                    IsEnabled="False"
                                    Style="{StaticResource RoundedButtonStyle}" />
                            </StackPanel>
                        </Grid>

                        <Border
                            Grid.Row="1"
                            Grid.Column="1"
                            Background="#262A32"
                            CornerRadius="10">
                            <Grid Margin="20">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock
                                    x:Name="SelectedServerLabel"
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="0,0,15,0"
                                    FontSize="20"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    Text="Server Name" />

                                <Grid
                                    Grid.Row="1"
                                    Grid.ColumnSpan="2"
                                    Margin="0,10,0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Margin="0,0,10,0"
                                        VerticalAlignment="Center"
                                        FontFamily="Segoe MDL2 Assets"
                                        FontSize="16"
                                        Foreground="#F3BD38"
                                        Text="&#xE700;" />
                                    <TextBlock
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        FontSize="16"
                                        FontWeight="Bold"
                                        Foreground="White"
                                        Text="Address:" />
                                </Grid>

                                <Border
                                    Grid.Row="2"
                                    Grid.ColumnSpan="4"
                                    Height="30"
                                    Margin="0,10,0,10"
                                    Background="#1C2127"
                                    CornerRadius="10">
                                    <TextBlock
                                        x:Name="addressTextBlock"
                                        Margin="10"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        FontSize="16"
                                        FontWeight="Bold"
                                        Foreground="White"
                                        Text="localhost"
                                        TextAlignment="Center" />
                                </Border>

                                <Grid Grid.Row="4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Row="2"
                                        Grid.Column="0"
                                        Margin="0,0,10,0"
                                        VerticalAlignment="Center"
                                        FontFamily="Segoe MDL2 Assets"
                                        FontSize="16"
                                        Foreground="#FFC107"
                                        Text="&#xE10B;" />
                                    <TextBlock
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        Margin="0,0,10,0"
                                        FontSize="16"
                                        FontWeight="Bold"
                                        Foreground="White"
                                        Text="Status:" />
                                    <TextBlock
                                        x:Name="statusTextBlock"
                                        Grid.Row="2"
                                        Grid.Column="2"
                                        FontSize="16"
                                        FontWeight="Bold"
                                        Foreground="White"
                                        Text="Offline" />
                                    <Border
                                        Grid.Row="2"
                                        Grid.Column="3"
                                        Width="15"
                                        Height="15"
                                        Margin="5,0,0,0"
                                        HorizontalAlignment="Left"
                                        Background="#FF3535"
                                        CornerRadius="10" />
                                    <!--  OFF hex value: #FF3535  -->
                                    <!--  ON hex value: #87FF2C  -->
                                </Grid>

                            </Grid>
                        </Border>
                    </Grid>
                    <Grid x:Name="Console" Visibility="Collapsed">
                        <Grid Margin="0,35,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="300*" />
                                <ColumnDefinition Width="100*" />
                            </Grid.ColumnDefinitions>

                            <!--  Large panel for Minecraft log with scrolling  -->
                            <Grid
                                Grid.Row="1"
                                Grid.RowSpan="2"
                                Margin="20,20,10,20">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="100*" />
                                    <RowDefinition Height="8*" />
                                </Grid.RowDefinitions>

                                <Grid
                                    Grid.Row="0"
                                    Grid.RowSpan="1"
                                    Grid.Column="0">
                                    <Border
                                        Grid.Row="2"
                                        Grid.RowSpan="1"
                                        Grid.Column="0"
                                        Background="#222428">
                                        <ScrollViewer x:Name="ConsoleWidth" VerticalScrollBarVisibility="Auto">
                                            <TextBox
                                                x:Name="consoleValue"
                                                Margin="5"
                                                Background="#222428"
                                                BorderThickness="0"
                                                FontFamily="Consolas"
                                                FontSize="15"
                                                Foreground="White"
                                                IsReadOnly="True"
                                                Text="{Binding Console}"
                                                TextWrapping="Wrap" />
                                        </ScrollViewer>
                                    </Border>
                                </Grid>

                                <Grid
                                    x:Name="InputGrid"
                                    Grid.Row="1"
                                    Grid.RowSpan="1"
                                    Grid.Column="0"
                                    Background="#262A32">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="65" />
                                        <ColumnDefinition Width="600*" />
                                        <ColumnDefinition Width="80*" />
                                    </Grid.ColumnDefinitions>
                                    <Border
                                        Grid.Row="1"
                                        Grid.RowSpan="2"
                                        Grid.Column="0"
                                        Margin="5"
                                        Background="Transparent">
                                        <TextBox
                                            VerticalAlignment="Center"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Cursor="Arrow"
                                            FontFamily="Consolas"
                                            FontSize="14"
                                            FontWeight="Bold"
                                            Foreground="White"
                                            IsReadOnly="True"
                                            Text="Input:"
                                            TextWrapping="Wrap" />
                                    </Border>
                                    <Border
                                        Grid.Row="1"
                                        Grid.RowSpan="2"
                                        Grid.Column="1"
                                        Margin="0,5,5,5"
                                        Background="Transparent">
                                        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                                            <TextBox
                                                x:Name="inputValue"
                                                HorizontalAlignment="Stretch"
                                                VerticalAlignment="Stretch"
                                                Background="Transparent"
                                                BorderBrush="White"
                                                BorderThickness="1"
                                                FontFamily="Consolas"
                                                FontSize="14"
                                                Foreground="White"
                                                SelectionBrush="#FF1F1F1F"
                                                Text=""
                                                TextWrapping="Wrap" />
                                        </ScrollViewer>
                                    </Border>
                                    <Button
                                        Grid.Row="1"
                                        Grid.RowSpan="4"
                                        Grid.Column="2"
                                        Margin="0,5,5,5"
                                        Click="Send_Command"
                                        Content="Send"
                                        FontFamily="Consolas"
                                        FontSize="12"
                                        FontWeight="Bold" />
                                </Grid>
                            </Grid>

                            <StackPanel
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="10,20,20,20"
                                VerticalAlignment="Top">
                                <!--  Memory panel  -->
                                <Border
                                    Height="45"
                                    Margin="0,0,0,10"
                                    Padding="10"
                                    Background="#262A32">
                                    <TextBlock
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        FontFamily="Consolas"
                                        FontSize="15"
                                        FontWeight="Bold"
                                        Foreground="White"
                                        Text="Memory:" />
                                </Border>
                                <Border Margin="0,-50,0,10" Padding="10">
                                    <TextBlock
                                        x:Name="memoryUsage"
                                        HorizontalAlignment="Right"
                                        FontFamily="Consolas"
                                        FontSize="15"
                                        Foreground="White"
                                        Text="{Binding MemoryUsage}" />
                                </Border>

                                <!--  Uptime panel  -->
                                <Border
                                    Height="45"
                                    Margin="0,0,0,10"
                                    Padding="10"
                                    Background="#262A32">
                                    <TextBlock
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        FontFamily="Consolas"
                                        FontSize="15"
                                        FontWeight="Bold"
                                        Foreground="White"
                                        Text="UpTime: " />
                                </Border>
                                <Border Margin="0,-50,0,0" Padding="10">
                                    <TextBlock
                                        x:Name="serverUpTime"
                                        HorizontalAlignment="Right"
                                        FontFamily="Consolas"
                                        FontSize="15"
                                        Foreground="White"
                                        Text="{Binding UpTime}" />
                                </Border>

                                <Border
                                    Height="45"
                                    Margin="0,0,0,10"
                                    Padding="10"
                                    Background="#262A32">
                                    <TextBlock
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        FontFamily="Consolas"
                                        FontSize="15"
                                        FontWeight="Bold"
                                        Foreground="White"
                                        Text="World Size:" />
                                </Border>
                                <Border Margin="0,-50,0,10" Padding="10">
                                    <TextBlock
                                        x:Name="worldSize"
                                        HorizontalAlignment="Right"
                                        FontFamily="Consolas"
                                        FontSize="15"
                                        Foreground="White"
                                        Text="{Binding WorldSize}" />
                                </Border>

                                <Border
                                    Height="45"
                                    Margin="0,0,0,10"
                                    Padding="10"
                                    Background="#262A32">
                                    <TextBlock
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        FontFamily="Consolas"
                                        FontSize="15"
                                        FontWeight="Bold"
                                        Foreground="White"
                                        Text="Online:" />
                                </Border>
                                <Border Margin="0,-50,0,10" Padding="10">
                                    <TextBlock
                                        x:Name="onlinePlayers"
                                        HorizontalAlignment="Right"
                                        FontFamily="Consolas"
                                        FontSize="15"
                                        Foreground="White"
                                        Text="{Binding PlayersOnline}" />
                                </Border>
                            </StackPanel>
                        </Grid>
                    </Grid>
                    <Grid x:Name="Files" Visibility="Collapsed">
                        <Grid Margin="0,35,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <StackPanel Margin="10" Orientation="Horizontal">
                                <Button
                                    x:Name="backFilesButton"
                                    Margin="0,0,10,0"
                                    Padding="5"
                                    Click="BackButton_Click"
                                    Content="&lt;-" />

                                <ScrollViewer
                                    VerticalAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    HorizontalScrollBarVisibility="Auto"
                                    VerticalScrollBarVisibility="Disabled">
                                    <StackPanel
                                        x:Name="pathContainer"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">

                                        <StackPanel.Resources>
                                            <ControlTemplate x:Key="PathButtonTemplate" TargetType="{x:Type Button}">
                                                <Border
                                                    Padding="8,4,8,4"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}">
                                                    <TextBlock
                                                        Name="pathButtonText"
                                                        Foreground="{TemplateBinding Foreground}"
                                                        Text="{TemplateBinding Content}" />
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="pathButtonText" Property="Foreground" Value="#ffffff" />
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter TargetName="pathButtonText" Property="Foreground" Value="#cecece" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </StackPanel.Resources>
                                    </StackPanel>
                                </ScrollViewer>
                            </StackPanel>

                            <ListView
                                x:Name="Files_Folders_ListView"
                                Grid.Row="1"
                                Margin="10"
                                VerticalAlignment="Stretch"
                                HorizontalContentAlignment="Stretch"
                                Background="Transparent"
                                BorderBrush="Transparent" />
                        </Grid>
                    </Grid>
                    <Grid x:Name="Stats" Visibility="Collapsed">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock
                                FontSize="30"
                                Foreground="White"
                                Text="Stats" />
                        </StackPanel>
                    </Grid>
                    <Grid x:Name="Settings" Visibility="Collapsed">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock
                                FontSize="30"
                                Foreground="White"
                                Text="Settings" />
                        </StackPanel>
                    </Grid>
                </Grid>

                <!--  Create Server Page (Initially Hidden)  -->
                <Grid x:Name="CreateServerPage" Visibility="Collapsed">
                    <Grid Background="#1C2127">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>


                        <Border
                            x:Name="BackgroundOverlay"
                            Grid.ColumnSpan="2"
                            Background="#80000000"
                            Visibility="Collapsed">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock x:Name="DescriptionParagraph" Margin="0,0,0,10" />
                                <StackPanel>
                                    <ProgressBar
                                        x:Name="ProgressBar"
                                        Width="300"
                                        Height="20" />
                                    <TextBlock x:Name="ProgressParagraph" HorizontalAlignment="Center" />
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <Grid>
                                    <Grid.Resources>
                                        <Style x:Key="DefaultTextStyle" TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="White" />
                                        </Style>

                                        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
                                            <Setter Property="Background" Value="#3C3C3C" />
                                            <Setter Property="Foreground" Value="White" />
                                            <Setter Property="BorderThickness" Value="0" />
                                            <Setter Property="Padding" Value="5" />
                                            <Setter Property="Margin" Value="0,2,0,2" />
                                        </Style>

                                        <Style x:Key="InputComboBoxStyle" TargetType="ComboBox">
                                            <Setter Property="Background" Value="#3C3C3C" />
                                            <Setter Property="Foreground" Value="Black" />
                                            <Setter Property="BorderThickness" Value="0" />
                                            <Setter Property="Padding" Value="5" />
                                            <Setter Property="Margin" Value="0,2,0,2" />
                                        </Style>

                                        <Style x:Key="ToggleCheckBoxStyle" TargetType="CheckBox">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type CheckBox}">
                                                        <Grid>
                                                            <Rectangle
                                                                x:Name="Background"
                                                                Width="30"
                                                                Height="16"
                                                                Fill="#4A4A4A"
                                                                RadiusX="8"
                                                                RadiusY="8" />
                                                            <Ellipse
                                                                x:Name="Thumb"
                                                                Width="14"
                                                                Height="14"
                                                                Margin="1"
                                                                HorizontalAlignment="Left"
                                                                Fill="White" />
                                                        </Grid>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsChecked" Value="True">
                                                                <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right" />
