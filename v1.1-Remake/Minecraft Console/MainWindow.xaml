<Window
    x:Class="Minecraft_Console.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Minecraft_Console"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    x:Name="Window"
    Title="Minecraft Console"
    Width="1200"
    Height="700"
    Icon="pack://application:,,,/assets/icons/Logo/logo.ico"
    mc:Ignorable="d">
    <Window.Resources>
        <Style x:Key="ServerCardFont" TargetType="TextBlock">
            <Setter Property="TextBlock.FontFamily" Value="pack://application:,,,/assets/Fonts/Jomhuria/#Jomhuria" />
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="TextBlock.FontFamily" Value="pack://application:,,,/assets/Fonts/Istok Web/#Istok Web" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="TextBlock.FontFamily" Value="pack://application:,,,/assets/Fonts/Istok Web/#Istok Web" />
        </Style>
        <Style TargetType="ListViewItem">
            <Setter Property="TextBlock.FontFamily" Value="pack://application:,,,/assets/Fonts/Istok Web/#Istok Web" />
        </Style>
    </Window.Resources>

    <Grid>
        <!--  Loading Animation  -->
        <Grid
            x:Name="LoadingScreen"
            Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Window}}"
            Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Window}}"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Panel.ZIndex="100"
            Background="#B3B8B8B8"
            Visibility="Collapsed">
            <Image
                Name="gifImage"
                Width="200"
                Margin="0,-100,-20,0" />
            <Label
                Name="LoadingLabel"
                Margin="0,50,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="Loading..."
                FontSize="20"
                FontWeight="Bold"
                Foreground="White" />
            <Border
                x:Name="loadingBarOutPadding"
                Width="410"
                Height="40"
                Margin="0,150,0,0"
                Background="#A2A2A2"
                CornerRadius="15">
                <Border
                    x:Name="progresBar"
                    Width="400"
                    Margin="5"
                    HorizontalAlignment="Left"
                    Background="#85FF4C"
                    CornerRadius="10" />
            </Border>
        </Grid>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15*" MaxWidth="250" />
                <ColumnDefinition Width="80*" />
            </Grid.ColumnDefinitions>

            <!--  Sidebar  -->
            <Grid
                Grid.Column="0"
                HorizontalAlignment="Stretch"
                Background="#262A32">
                <Grid.Resources>
                    <Style x:Key="SidebarButtonStyle" TargetType="Button">
                        <Setter Property="Margin" Value="0,5" />
                        <Setter Property="Height" Value="60" />
                        <Setter Property="HorizontalAlignment" Value="Stretch" />
                        <Setter Property="Cursor" Value="Hand" />
                        <Setter Property="FontWeight" Value="Bold" />
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="BorderBrush" Value="Transparent" />
                        <Setter Property="FontSize" Value="25" />
                        <Setter Property="Foreground" Value="White" />
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                        <Setter Property="Padding" Value="20,10" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}">
                                        <ContentPresenter
                                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                            Content="{TemplateBinding Content}"
                                            ContentTemplate="{TemplateBinding ContentTemplate}"
                                            RecognizesAccessKey="True" />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#2F333D" />
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#1E2127" />
                                        </Trigger>

                                        <Trigger Property="local:ButtonExtensions.IsSidebarSelected" Value="True">
                                            <Setter Property="Background" Value="#22262D" />
                                            <Setter Property="Foreground" Value="#FEC538" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Grid.Resources>

                <StackPanel
                    x:Name="sidebarStackPanel"
                    Margin="0,20"
                    VerticalAlignment="Top">
                    <Image
                        Height="40"
                        Margin="20,10"
                        Source="pack://application:,,,/assets/icons/Logo/minehost.png" />
                    <Button
                        Click="NavigateToServers"
                        Content="Servers"
                        Style="{StaticResource SidebarButtonStyle}"
                        Tag="Servers" />
                    <Button
                        Click="NavigateToProfile"
                        Content="Profile"
                        Style="{StaticResource SidebarButtonStyle}"
                        Tag="Profile" />
                    <Button
                        Click="NavigateToSettings"
                        Content="Settings"
                        Style="{StaticResource SidebarButtonStyle}"
                        Tag="Profile" />
                    <Button
                        Click="NavigateToSupport"
                        Content="Support"
                        Style="{StaticResource SidebarButtonStyle}"
                        Tag="Support" />
                </StackPanel>
            </Grid>

            <!--  Main Content Area  -->
            <Grid Grid.Column="1">
                <Grid x:Name="MainContent" VerticalAlignment="Top" />

                <!--  Server Control Panel (Initially Hidden)  -->
                <Grid Panel.ZIndex="-1" Background="#1C2127">
                    <Grid x:Name="ServerControlPanelDropBox">
                        <Grid.Resources>
                            <Style x:Key="InputComboBoxStyle" TargetType="ComboBox">
                                <Setter Property="Grid.Column" Value="1" />
                                <Setter Property="HorizontalAlignment" Value="Right" />
                                <Setter Property="SelectedIndex" Value="0" />
                                <Setter Property="Cursor" Value="Hand" />
                                <Setter Property="Width" Value="100" />
                                <Setter Property="Height" Value="30" />
                                <Setter Property="VerticalContentAlignment" Value="Center" />
                                <Setter Property="FontSize" Value="14" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="BorderThickness" Value="0" />
                                <Setter Property="Padding" Value="5" />
                                <Setter Property="Margin" Value="0,2,0,2" />
                                <Setter Property="MaxDropDownHeight" Value="250" />
                                <Setter Property="ItemContainerStyle">
                                    <Setter.Value>
                                        <Style TargetType="ListBoxItem">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ListBoxItem">
                                                        <Border
                                                            x:Name="Bd"
                                                            Width="{TemplateBinding Width}"
                                                            Padding="7,4"
                                                            Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="6"
                                                            SnapsToDevicePixels="True">
                                                            <ContentPresenter
                                                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Cursor" Value="Hand" />
                                                                <Setter TargetName="Bd" Property="Background" Value="#2c303a" />
                                                                <Setter Property="Foreground" Value="White" />
                                                            </Trigger>
                                                            <Trigger Property="IsSelected" Value="True">
                                                                <Setter TargetName="Bd" Property="Background" Value="#373c49" />
                                                                <Setter Property="Foreground" Value="White" />
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ComboBox">
                                            <Grid>
                                                <Border
                                                    x:Name="Border"
                                                    Padding="5"
                                                    Background="{TemplateBinding Background}"
                                                    BorderThickness="0"
                                                    CornerRadius="6"
                                                    SnapsToDevicePixels="True">
                                                    <Grid>
                                                        <ContentPresenter
                                                            x:Name="ContentSite"
                                                            Margin="10,0,30,0"
                                                            HorizontalAlignment="Left"
                                                            VerticalAlignment="Center"
                                                            Content="{TemplateBinding SelectionBoxItem}"
                                                            ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                            ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}">
                                                            <ContentPresenter.RenderTransform>
                                                                <TranslateTransform X="0" Y="-1" />
                                                            </ContentPresenter.RenderTransform>
                                                        </ContentPresenter>

                                                        <Canvas
                                                            x:Name="ArrowCanvas"
                                                            Width="12"
                                                            Height="12"
                                                            Margin="0,0,10,0"
                                                            HorizontalAlignment="Right"
                                                            VerticalAlignment="Center"
                                                            RenderTransformOrigin="0.5,0.5">
                                                            <Canvas.RenderTransform>
                                                                <RotateTransform x:Name="ArrowRotation" Angle="90" />
                                                            </Canvas.RenderTransform>
                                                            <Line
                                                                Stroke="White"
                                                                StrokeEndLineCap="Round"
                                                                StrokeStartLineCap="Round"
                                                                StrokeThickness="2"
                                                                X1="3"
                                                                X2="6"
                                                                Y1="4"
                                                                Y2="7" />

                                                            <Line
                                                                Stroke="White"
                                                                StrokeEndLineCap="Round"
                                                                StrokeStartLineCap="Round"
                                                                StrokeThickness="2"
                                                                X1="9"
                                                                X2="6"
                                                                Y1="4"
                                                                Y2="7" />
                                                        </Canvas>
                                                    </Grid>
                                                </Border>

                                                <Popup
                                                    x:Name="Popup"
                                                    MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                                    AllowsTransparency="True"
                                                    Focusable="False"
                                                    IsOpen="{TemplateBinding IsDropDownOpen}"
                                                    Placement="Right"
                                                    PopupAnimation="Slide">

                                                    <Border
                                                        Width="{TemplateBinding Width}"
                                                        Padding="5"
                                                        Background="#21242c"
                                                        CornerRadius="6"
                                                        SnapsToDevicePixels="True">
                                                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                                                            <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                                        </ScrollViewer>
                                                    </Border>
                                                </Popup>
                                            </Grid>

                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsDropDownOpen" Value="True">
                                                    <Trigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation
                                                                    Storyboard.TargetName="ArrowRotation"
                                                                    Storyboard.TargetProperty="Angle"
                                                                    From="90"
                                                                    To="270"
                                                                    Duration="0:0:0.2" />
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </Trigger.EnterActions>
                                                    <Trigger.ExitActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation
                                                                    Storyboard.TargetName="ArrowRotation"
                                                                    Storyboard.TargetProperty="Angle"
                                                                    From="270"
                                                                    To="90"
                                                                    Duration="0:0:0.2" />
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </Trigger.ExitActions>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="#2c313a" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Grid.Resources>
                        <ComboBox
                            x:Name="ServerDropBox"
                            Margin="10,10,10,10"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            SelectedIndex="0"
                            SelectionChanged="ServerControlPanelDropBoxChanged"
                            Style="{StaticResource InputComboBoxStyle}"
                            Visibility="Collapsed">
                            <ComboBoxItem Name="ManageCheckBox" Content="Manage" />
                            <ComboBoxItem Name="ConsoleCheckBox" Content="Console" />
                            <ComboBoxItem Name="FilesCheckBox" Content="Files" />
                            <ComboBoxItem Name="StatsCheckBox" Content="Stats" />
                            <ComboBoxItem Name="SettingsCheckBox" Content="Settings" />
                        </ComboBox>
                    </Grid>
                    <Grid
                        x:Name="Manage"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Visibility="Collapsed">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Image
                            x:Name="ServerImageManage"
                            Grid.RowSpan="2"
                            Grid.Column="0"
                            Height="300"
                            MinWidth="200"
                            Margin="0,0,25,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Source="pack://application:,,,/assets/Minecraft_Photo.png"
                            Stretch="UniformToFill" />

                        <Grid
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="25">
                            <StackPanel Orientation="Horizontal">
                                <StackPanel.Resources>
                                    <Style x:Key="RoundedButtonStyle" TargetType="Button">
                                        <Setter Property="Cursor" Value="Hand" />
                                        <Setter Property="Width" Value="150" />
                                        <Setter Property="Height" Value="45" />
                                        <Setter Property="Margin" Value="5" />
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                        <Setter Property="VerticalContentAlignment" Value="Center" />
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Setter Property="FontSize" Value="20" />
                                        <Setter Property="FontWeight" Value="Bold" />
                                        <Setter Property="Foreground" Value="White" />
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border
                                                        Padding="{TemplateBinding Padding}"
                                                        Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="5">
                                                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Opacity" Value="0.9" />
                                                        </Trigger>
                                                        <Trigger Property="IsPressed" Value="True">
                                                            <Setter Property="Opacity" Value="0.7" />
                                                        </Trigger>
                                                        <Trigger Property="IsEnabled" Value="False">
                                                            <Setter Property="Opacity" Value="0.5" />
                                                            <Setter Property="Background" Value="#9E9E9E" />
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </StackPanel.Resources>
                                <Button
                                    x:Name="StartBtn"
                                    Background="#2781E6"
                                    Click="StartServer"
                                    Content="Start"
                                    Style="{StaticResource RoundedButtonStyle}" />
                                <Button
                                    x:Name="StopBtn"
                                    Background="#E92626"
                                    Click="StopServer"
                                    Content="Stop"
                                    IsEnabled="False"
                                    Style="{StaticResource RoundedButtonStyle}" />
                                <Button
                                    x:Name="RestartBtn"
                                    Background="#B921FF"
                                    Click="RestartServer"
                                    Content="Restart"
                                    IsEnabled="False"
                                    Style="{StaticResource RoundedButtonStyle}" />
                            </StackPanel>
                        </Grid>

                        <Border
                            Grid.Row="1"
                            Grid.Column="1"
                            Background="#262A32"
                            CornerRadius="10">
                            <Grid Margin="20">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock
                                    x:Name="SelectedServerLabel"
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="0,0,15,0"
                                    FontSize="20"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    Text="Server Name" />

                                <Grid
                                    Grid.Row="1"
                                    Grid.ColumnSpan="2"
                                    Margin="0,10,0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Margin="0,0,10,0"
                                        VerticalAlignment="Center"
                                        FontFamily="Segoe MDL2 Assets"
                                        FontSize="16"
                                        Foreground="#F3BD38"
                                        Text="&#xE700;" />
                                    <TextBlock
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        FontSize="16"
                                        FontWeight="Bold"
                                        Foreground="White"
                                        Text="Address:" />
                                </Grid>

                                <Border
                                    Grid.Row="2"
                                    Grid.ColumnSpan="4"
                                    Height="30"
                                    Margin="0,10,0,10"
                                    Background="#1C2127"
                                    CornerRadius="10">
                                    <TextBlock
                                        x:Name="addressTextBlock"
                                        Margin="10"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        FontSize="16"
                                        FontWeight="Bold"
                                        Foreground="White"
                                        Text="localhost"
                                        TextAlignment="Center" />
                                </Border>

                                <Grid Grid.Row="4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Row="2"
                                        Grid.Column="0"
                                        Margin="0,0,10,0"
                                        VerticalAlignment="Center"
                                        FontFamily="Segoe MDL2 Assets"
                                        FontSize="16"
                                        Foreground="#FFC107"
                                        Text="&#xE10B;" />
                                    <TextBlock
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        Margin="0,0,10,0"
                                        FontSize="16"
                                        FontWeight="Bold"
                                        Foreground="White"
                                        Text="Status:" />
                                    <TextBlock
                                        x:Name="ServerStatusTextBlock"
                                        Grid.Row="2"
                                        Grid.Column="2"
                                        FontSize="16"
                                        FontWeight="Bold"
                                        Foreground="White"
                                        Text="Offline" />
                                    <Border
                                        x:Name="ServerStatusCircle"
                                        Grid.Row="2"
                                        Grid.Column="3"
                                        Width="15"
                                        Height="15"
                                        Margin="5,0,0,0"
                                        HorizontalAlignment="Left"
                                        Background="#FF3535"
                                        CornerRadius="10" />
                                </Grid>

                            </Grid>
                        </Border>
                    </Grid>
                    <Grid x:Name="Console" Visibility="Collapsed">
                        <Grid Margin="0,35,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="300*" />
                                <ColumnDefinition Width="100*" />
                            </Grid.ColumnDefinitions>

                            <!--  Large panel for Minecraft log with scrolling  -->
                            <Grid
                                Grid.Row="1"
                                Grid.RowSpan="2"
                                Margin="20,20,10,20">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="100*" />
                                    <RowDefinition Height="8*" />
                                </Grid.RowDefinitions>

                                <Grid
                                    Grid.Row="0"
                                    Grid.RowSpan="1"
                                    Grid.Column="0">
                                    <Border
                                        Grid.Row="2"
                                        Grid.RowSpan="1"
                                        Grid.Column="0"
                                        Background="#222428">
                                        <ScrollViewer x:Name="ConsoleWidth" VerticalScrollBarVisibility="Auto">
                                            <TextBox
                                                x:Name="consoleValue"
                                                Margin="5"
                                                Background="#222428"
                                                BorderThickness="0"
                                                FontFamily="Consolas"
                                                FontSize="15"
                                                Foreground="White"
                                                IsReadOnly="True"
                                                Text="{Binding Console}"
                                                TextWrapping="Wrap" />
                                        </ScrollViewer>
                                    </Border>
                                </Grid>

                                <Grid
                                    x:Name="InputGrid"
                                    Grid.Row="1"
                                    Grid.RowSpan="1"
                                    Grid.Column="0"
                                    Background="#262A32">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="65" />
                                        <ColumnDefinition Width="600*" />
                                        <ColumnDefinition Width="80*" />
                                    </Grid.ColumnDefinitions>
                                    <Border
                                        Grid.Row="1"
                                        Grid.RowSpan="2"
                                        Grid.Column="0"
                                        Margin="5"
                                        Background="Transparent">
                                        <TextBox
                                            VerticalAlignment="Center"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Cursor="Arrow"
                                            FontFamily="Consolas"
                                            FontSize="14"
                                            FontWeight="Bold"
                                            Foreground="White"
                                            IsReadOnly="True"
                                            Text="Input:"
                                            TextWrapping="Wrap" />
                                    </Border>
                                    <Border
                                        Grid.Row="1"
                                        Grid.RowSpan="2"
                                        Grid.Column="1"
                                        Margin="0,5,5,5"
                                        Background="Transparent">
                                        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                                            <TextBox
                                                x:Name="inputValue"
                                                HorizontalAlignment="Stretch"
                                                VerticalAlignment="Stretch"
                                                Background="Transparent"
                                                BorderBrush="White"
                                                BorderThickness="1"
                                                FontFamily="Consolas"
                                                FontSize="14"
                                                Foreground="White"
                                                SelectionBrush="#FF1F1F1F"
                                                Text=""
                                                TextWrapping="Wrap" />
                                        </ScrollViewer>
                                    </Border>
                                    <Button
                                        Grid.Row="1"
                                        Grid.RowSpan="4"
                                        Grid.Column="2"
                                        Margin="0,5,5,5"
                                        Click="Send_Command"
                                        Content="Send"
                                        FontFamily="Consolas"
                                        FontSize="12"
                                        FontWeight="Bold" />
                                </Grid>
                            </Grid>

                            <StackPanel
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="10,20,20,20"
                                VerticalAlignment="Top">
                                <!--  Memory panel  -->
                                <Border
                                    Height="45"
                                    Margin="0,0,0,10"
                                    Padding="10"
                                    Background="#262A32">
                                    <TextBlock
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        FontFamily="Consolas"
                                        FontSize="15"
                                        FontWeight="Bold"
                                        Foreground="White"
                                        Text="Memory:" />
                                </Border>
                                <Border Margin="0,-50,0,10" Padding="10">
                                    <TextBlock
                                        x:Name="memoryUsage"
                                        HorizontalAlignment="Right"
                                        FontFamily="Consolas"
                                        FontSize="15"
                                        Foreground="White"
                                        Text="{Binding MemoryUsage}" />
                                </Border>

                                <!--  Uptime panel  -->
                                <Border
                                    Height="45"
                                    Margin="0,0,0,10"
                                    Padding="10"
                                    Background="#262A32">
                                    <TextBlock
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        FontFamily="Consolas"
                                        FontSize="15"
                                        FontWeight="Bold"
                                        Foreground="White"
                                        Text="UpTime: " />
                                </Border>
                                <Border Margin="0,-50,0,0" Padding="10">
                                    <TextBlock
                                        x:Name="serverUpTime"
                                        HorizontalAlignment="Right"
                                        FontFamily="Consolas"
                                        FontSize="15"
                                        Foreground="White"
                                        Text="{Binding UpTime}" />
                                </Border>

                                <Border
                                    Height="45"
                                    Margin="0,0,0,10"
                                    Padding="10"
                                    Background="#262A32">
                                    <TextBlock
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        FontFamily="Consolas"
                                        FontSize="15"
                                        FontWeight="Bold"
                                        Foreground="White"
                                        Text="World Size:" />
                                </Border>
                                <Border Margin="0,-50,0,10" Padding="10">
                                    <TextBlock
                                        x:Name="worldSize"
                                        HorizontalAlignment="Right"
                                        FontFamily="Consolas"
                                        FontSize="15"
                                        Foreground="White"
                                        Text="{Binding WorldSize}" />
                                </Border>

                                <Border
                                    Height="45"
                                    Margin="0,0,0,10"
                                    Padding="10"
                                    Background="#262A32">
                                    <TextBlock
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        FontFamily="Consolas"
                                        FontSize="15"
                                        FontWeight="Bold"
                                        Foreground="White"
                                        Text="Online:" />
                                </Border>
                                <Border Margin="0,-50,0,10" Padding="10">
                                    <TextBlock
                                        x:Name="onlinePlayers"
                                        HorizontalAlignment="Right"
                                        FontFamily="Consolas"
                                        FontSize="15"
                                        Foreground="White"
                                        Text="{Binding PlayersOnline}" />
                                </Border>
                            </StackPanel>
                        </Grid>
                    </Grid>
                    <Grid x:Name="Files" Visibility="Collapsed">
                        <Grid Margin="0,35,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <StackPanel Margin="10" Orientation="Horizontal">
                                <Button
                                    x:Name="backFilesButton"
                                    Margin="0,0,10,0"
                                    Padding="5"
                                    Click="BackButton_Click"
                                    Content="&lt;-" />

                                <ScrollViewer
                                    VerticalAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    HorizontalScrollBarVisibility="Auto"
                                    VerticalScrollBarVisibility="Disabled">
                                    <StackPanel
                                        x:Name="pathContainer"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">

                                        <StackPanel.Resources>
                                            <ControlTemplate x:Key="PathButtonTemplate" TargetType="{x:Type Button}">
                                                <Border
                                                    Padding="8,4,8,4"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}">
                                                    <TextBlock
                                                        Name="pathButtonText"
                                                        Foreground="{TemplateBinding Foreground}"
                                                        Text="{TemplateBinding Content}" />
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="pathButtonText" Property="Foreground" Value="#ffffff" />
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter TargetName="pathButtonText" Property="Foreground" Value="#cecece" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </StackPanel.Resources>
                                    </StackPanel>
                                </ScrollViewer>
                            </StackPanel>

                            <ListView
                                x:Name="Files_Folders_ListView"
                                Grid.Row="1"
                                Margin="10"
                                VerticalAlignment="Stretch"
                                HorizontalContentAlignment="Stretch"
                                Background="Transparent"
                                BorderBrush="Transparent" />
                        </Grid>
                    </Grid>
                    <Grid x:Name="Stats" Visibility="Collapsed">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock
                                FontSize="30"
                                Foreground="White"
                                Text="Stats" />
                        </StackPanel>
                    </Grid>
                    <Grid x:Name="Settings" Visibility="Collapsed">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock
                                FontSize="30"
                                Foreground="White"
                                Text="Settings" />
                        </StackPanel>
                    </Grid>
                </Grid>

                <!--  Create Server Page (Initially Hidden)  -->
                <Grid x:Name="CreateServerPage" Visibility="Collapsed">
                    <Grid Background="#1C2127">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--  Background for the world creation progress  -->
                        <Border
                            x:Name="BackgroundOverlay"
                            Grid.ColumnSpan="2"
                            Background="#80000000"
                            Visibility="Collapsed">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock x:Name="DescriptionParagraph" Margin="0,0,0,10" />
                                <StackPanel>
                                    <ProgressBar
                                        x:Name="ProgressBar"
                                        Width="300"
                                        Height="20" />
                                    <TextBlock x:Name="ProgressParagraph" HorizontalAlignment="Center" />
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <Grid>
                                    <Grid.Resources>
                                        <Style x:Key="SettingsItem" TargetType="Border">
                                            <Setter Property="Margin" Value="15" />
                                            <Setter Property="MinWidth" Value="250" />
                                            <Setter Property="Height" Value="50" />
                                            <Setter Property="Padding" Value="10,5" />
                                            <Setter Property="Background" Value="#1C2127" />
                                            <Setter Property="CornerRadius" Value="15" />
                                        </Style>

                                        <Style x:Key="SettingsVersionsItem" TargetType="Border">
                                            <Setter Property="Margin" Value="10,0" />
                                            <Setter Property="Padding" Value="12,7" />
                                            <Setter Property="Background" Value="#262A32" />
                                            <Setter Property="CornerRadius" Value="15" />
                                        </Style>

                                        <Style x:Key="DefaultTitleTextStyle" TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="White" />
                                            <Setter Property="FontSize" Value="20" />
                                            <Setter Property="FontWeight" Value="Bold" />
                                        </Style>

                                        <Style x:Key="DefaultTextStyle" TargetType="TextBlock">
                                            <Setter Property="Grid.Column" Value="0" />
                                            <Setter Property="HorizontalAlignment" Value="Left" />
                                            <Setter Property="Margin" Value="0,0,15,0" />
                                            <Setter Property="Foreground" Value="White" />
                                            <Setter Property="FontSize" Value="18" />
                                            <Setter Property="VerticalAlignment" Value="Center" />
                                        </Style>

                                        <Style x:Key="InputTextBoxStyleServerName" TargetType="TextBox">
                                            <Setter Property="Grid.Column" Value="1" />
                                            <Setter Property="HorizontalAlignment" Value="Right" />
                                            <Setter Property="VerticalContentAlignment" Value="Center" />
                                            <Setter Property="FontSize" Value="20" />
                                            <Setter Property="Background" Value="#262A32" />
                                            <Setter Property="Foreground" Value="White" />
                                            <Setter Property="BorderThickness" Value="0" />
                                        </Style>

                                        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
                                            <Setter Property="Width" Value="75" />
                                            <Setter Property="Height" Value="30" />
                                            <Setter Property="FontSize" Value="16" />
                                            <Setter Property="Padding" Value="5,0,0,0" />
                                            <Setter Property="Background" Value="#262A32" />
                                            <Setter Property="Foreground" Value="White" />
                                            <Setter Property="BorderThickness" Value="0" />
                                            <Setter Property="Margin" Value="0,2,0,2" />
                                            <Setter Property="Grid.Column" Value="1" />
                                            <Setter Property="HorizontalAlignment" Value="Right" />
                                            <Setter Property="VerticalContentAlignment" Value="Center" />
                                            <Setter Property="HorizontalScrollBarVisibility" Value="Auto" />
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="TextBox">
                                                        <Border
                                                            Background="{TemplateBinding Background}"
                                                            CornerRadius="6"
                                                            SnapsToDevicePixels="True">
                                                            <ScrollViewer
                                                                x:Name="PART_ContentHost"
                                                                Margin="0"
                                                                Padding="{TemplateBinding Padding}" />
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>

                                        <Style x:Key="InputItemTextBoxStyle" TargetType="Border">
                                            <Setter Property="Background" Value="#262A32" />
                                            <Setter Property="CornerRadius" Value="15" />
                                            <Setter Property="Padding" Value="15,12" />
                                        </Style>

                                        <Style x:Key="InputComboBoxStyle" TargetType="ComboBox">
                                            <Setter Property="Grid.Column" Value="1" />
                                            <Setter Property="HorizontalAlignment" Value="Right" />
                                            <Setter Property="SelectedIndex" Value="0" />
                                            <Setter Property="Cursor" Value="Hand" />
                                            <Setter Property="Width" Value="110" />
                                            <Setter Property="Height" Value="30" />
                                            <Setter Property="VerticalContentAlignment" Value="Center" />
                                            <Setter Property="FontSize" Value="14" />
                                            <Setter Property="Foreground" Value="White" />
                                            <Setter Property="Background" Value="#262A32" />
                                            <Setter Property="BorderThickness" Value="0" />
                                            <Setter Property="Padding" Value="5" />
                                            <Setter Property="Margin" Value="0,2,0,2" />
                                            <Setter Property="MaxDropDownHeight" Value="250" />
                                            <Setter Property="ItemContainerStyle">
                                                <Setter.Value>
                                                    <Style TargetType="ListBoxItem">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="ListBoxItem">
                                                                    <Border
                                                                        x:Name="Bd"
                                                                        Padding="7,4"
                                                                        Background="{TemplateBinding Background}"
                                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                                        CornerRadius="6"
                                                                        SnapsToDevicePixels="True">
                                                                        <ContentPresenter
                                                                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                                            SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                                                    </Border>
                                                                    <ControlTemplate.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter Property="Cursor" Value="Hand" />
                                                                            <Setter TargetName="Bd" Property="Background" Value="#2c303a" />
                                                                            <Setter Property="Foreground" Value="White" />
                                                                        </Trigger>
                                                                        <Trigger Property="IsSelected" Value="True">
                                                                            <Setter TargetName="Bd" Property="Background" Value="#373c49" />
                                                                            <Setter Property="Foreground" Value="White" />
                                                                        </Trigger>
                                                                    </ControlTemplate.Triggers>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </Setter.Value>
                                            </Setter>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ComboBox">
                                                        <Grid>
                                                            <Border
                                                                x:Name="Border"
                                                                Background="{TemplateBinding Background}"
                                                                BorderThickness="0"
                                                                CornerRadius="6"
                                                                SnapsToDevicePixels="True">
                                                                <Grid>
                                                                    <ContentPresenter
                                                                        x:Name="ContentSite"
                                                                        Margin="10,0,30,0"
                                                                        HorizontalAlignment="Left"
                                                                        VerticalAlignment="Center"
                                                                        Content="{TemplateBinding SelectionBoxItem}"
                                                                        ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                                        ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}" />

                                                                    <Canvas
                                                                        x:Name="ArrowCanvas"
                                                                        Width="12"
                                                                        Height="12"
                                                                        Margin="0,0,10,0"
                                                                        HorizontalAlignment="Right"
                                                                        VerticalAlignment="Center"
                                                                        RenderTransformOrigin="0.5,0.5">
                                                                        <Canvas.RenderTransform>
                                                                            <RotateTransform x:Name="ArrowRotation" Angle="0" />
                                                                        </Canvas.RenderTransform>
                                                                        <Line
                                                                            Stroke="White"
                                                                            StrokeEndLineCap="Round"
                                                                            StrokeStartLineCap="Round"
                                                                            StrokeThickness="2"
                                                                            X1="3"
                                                                            X2="6"
                                                                            Y1="4"
                                                                            Y2="7" />

                                                                        <Line
                                                                            Stroke="White"
                                                                            StrokeEndLineCap="Round"
                                                                            StrokeStartLineCap="Round"
                                                                            StrokeThickness="2"
                                                                            X1="9"
                                                                            X2="6"
                                                                            Y1="4"
                                                                            Y2="7" />
                                                                    </Canvas>
                                                                </Grid>
                                                            </Border>

                                                            <Popup
                                                                x:Name="Popup"
                                                                MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                                                AllowsTransparency="True"
                                                                Focusable="False"
                                                                IsOpen="{TemplateBinding IsDropDownOpen}"
                                                                Placement="Bottom"
                                                                PopupAnimation="Slide">

                                                                <Border
                                                                    Width="{TemplateBinding Width}"
                                                                    Padding="5"
                                                                    Background="#21242c"
                                                                    CornerRadius="6"
                                                                    SnapsToDevicePixels="True">
                                                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                                                        <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                                                    </ScrollViewer>
                                                                </Border>
                                                            </Popup>
                                                        </Grid>

                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsDropDownOpen" Value="True">
                                                                <Trigger.EnterActions>
                                                                    <BeginStoryboard>
                                                                        <Storyboard>
                                                                            <DoubleAnimation
                                                                                Storyboard.TargetName="ArrowRotation"
                                                                                Storyboard.TargetProperty="Angle"
                                                                                To="180"
                                                                                Duration="0:0:0.2" />
                                                                        </Storyboard>
                                                                    </BeginStoryboard>
                                                                </Trigger.EnterActions>
                                                                <Trigger.ExitActions>
                                                                    <BeginStoryboard>
                                                                        <Storyboard>
                                                                            <DoubleAnimation
                                                                                Storyboard.TargetName="ArrowRotation"
                                                                                Storyboard.TargetProperty="Angle"
                                                                                To="0"
                                                                                Duration="0:0:0.2" />
                                                                        </Storyboard>
                                                                    </BeginStoryboard>
                                                                </Trigger.ExitActions>
                                                            </Trigger>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="Border" Property="Background" Value="#2c313a" />
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>

                                        <Style x:Key="ToggleCheckBoxStyle" TargetType="CheckBox">
                                            <Setter Property="Grid.Column" Value="1" />
                                            <Setter Property="HorizontalAlignment" Value="Right" />
                                            <Setter Property="Cursor" Value="Hand" />
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type CheckBox}">
                                                        <Grid>
                                                            <!--  Background bar  -->
                                                            <Rectangle
                                                                x:Name="Background"
                                                                Width="50"
                                                                Height="32"
                                                                Fill="#262A32"
                                                                RadiusX="16"
                                                                RadiusY="16" />

                                                            <!--  Toggle ellipse  -->
                                                            <Ellipse
                                                                x:Name="Thumb"
                                                                Width="25"
                                                                Height="25"
                                                                Margin="4"
                                                                HorizontalAlignment="Left"
                                                                VerticalAlignment="Center"
                                                                Fill="#F62451" />

                                                            <!--  Centered icon container  -->
                                                            <Grid
                                                                x:Name="IconContainer"
                                                                Width="28"
                                                                Height="28"
                                                                Margin="2"
                                                                HorizontalAlignment="Left"
                                                                VerticalAlignment="Center">
                                                                <!--  Cross Icon  -->
                                                                <Grid
                                                                    x:Name="CrossIcon"
                                                                    HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"
                                                                    RenderTransformOrigin="0.5,0.5">
                                                                    <Grid.RenderTransform>
                                                                        <TransformGroup>
                                                                            <ScaleTransform />
                                                                            <SkewTransform />
                                                                            <RotateTransform />
                                                                            <TranslateTransform X="-1" Y="-1" />
                                                                        </TransformGroup>
                                                                    </Grid.RenderTransform>
                                                                    <Line
                                                                        Stroke="White"
                                                                        StrokeEndLineCap="Round"
                                                                        StrokeStartLineCap="Round"
                                                                        StrokeThickness="2.8"
                                                                        X1="4"
                                                                        X2="14"
                                                                        Y1="4"
                                                                        Y2="14" />
                                                                    <Line
                                                                        Stroke="White"
                                                                        StrokeEndLineCap="Round"
                                                                        StrokeStartLineCap="Round"
                                                                        StrokeThickness="2.8"
                                                                        X1="4"
                                                                        X2="14"
                                                                        Y1="14"
                                                                        Y2="4" />
                                                                </Grid>

                                                                <!--  Checkmark Icon  -->
                                                                <Grid
                                                                    x:Name="CheckIcon"
                                                                    HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"
                                                                    Visibility="Collapsed">
                                                                    <Grid.RenderTransform>
                                                                        <TransformGroup>
                                                                            <ScaleTransform />
                                                                            <SkewTransform />
                                                                            <RotateTransform />
                                                                            <TranslateTransform X="-1" Y="-1" />
                                                                        </TransformGroup>
                                                                    </Grid.RenderTransform>
                                                                    <Path
                                                                        Data="M3,10 L7,14 L14,4"
                                                                        Stroke="White"
                                                                        StrokeEndLineCap="Round"
                                                                        StrokeLineJoin="Round"
                                                                        StrokeStartLineCap="Round"
                                                                        StrokeThickness="2.8" />
                                                                </Grid>
                                                            </Grid>
                                                        </Grid>

                                                        <!--  Toggle behavior  -->
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsChecked" Value="True">
                                                                <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right" />
                                                                <Setter TargetName="IconContainer" Property="HorizontalAlignment" Value="Right" />
                                                                <Setter TargetName="Thumb" Property="Fill" Value="#1FD78D" />
                                                                <Setter TargetName="CrossIcon" Property="Visibility" Value="Collapsed" />
                                                                <Setter TargetName="CheckIcon" Property="Visibility" Value="Visible" />
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Setter Property="Margin" Value="0,2,0,2" />
                                        </Style>

                                        <Style x:Key="CreateButtonStyle" TargetType="Button">
                                            <Setter Property="Width" Value="150" />
                                            <Setter Property="Height" Value="50" />
                                            <Setter Property="Background" Value="#FF4CAF50" />
                                            <Setter Property="Foreground" Value="White" />
                                            <Setter Property="BorderThickness" Value="0" />
                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                            <Setter Property="Padding" Value="10,5" />
                                            <Setter Property="Margin" Value="0,25,0,5" />
                                            <Setter Property="FontSize" Value="25" />
                                            <Setter Property="FontWeight" Value="Bold" />
                                            <Setter Property="Cursor" Value="Hand" />

                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border
                                                            x:Name="border"
                                                            Background="{TemplateBinding Background}"
                                                            CornerRadius="8"
                                                            SnapsToDevicePixels="True">
                                                            <ContentPresenter
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"
                                                                RecognizesAccessKey="True" />
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="border" Property="Background" Value="#FF66BB6A" />
                                                            </Trigger>
                                                            <Trigger Property="IsPressed" Value="True">
                                                                <Setter TargetName="border" Property="Background" Value="#FF388E3C" />
                                                                <Setter TargetName="border" Property="RenderTransform">
                                                                    <Setter.Value>
                                                                        <ScaleTransform ScaleX="0.97" ScaleY="0.97" />
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </Trigger>
                                                            <Trigger Property="IsPressed" Value="False">
                                                                <Setter TargetName="border" Property="RenderTransform">
                                                                    <Setter.Value>
                                                                        <ScaleTransform ScaleX="1" ScaleY="1" />
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </Trigger>
                                                            <Trigger Property="IsEnabled" Value="False">
                                                                <Setter TargetName="border" Property="Background" Value="#FFC8E6C9" />
                                                                <Setter Property="Foreground" Value="#FF9E9E9E" />
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Grid.Resources>

                                    <Grid Margin="10" VerticalAlignment="Top">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <Grid Grid.Row="0" Margin="0,10,0,10">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <Grid Grid.Row="0">
                                                <TextBlock
                                                    Margin="0,0,0,5"
                                                    VerticalAlignment="Center"
                                                    Style="{StaticResource DefaultTitleTextStyle}"
                                                    Text="Server Name" />
                                            </Grid>
                                            <Grid Grid.Row="1">
                                                <Border Style="{StaticResource InputItemTextBoxStyle}">
                                                    <TextBox
                                                        x:Name="ServerNameInput"
                                                        HorizontalAlignment="Stretch"
                                                        Background="Transparent"
                                                        HorizontalScrollBarVisibility="Auto"
                                                        MaxLength="50"
                                                        Style="{StaticResource InputTextBoxStyleServerName}" />
                                                </Border>
                                            </Grid>
                                        </Grid>

                                        <Grid Grid.Row="1" Margin="0,10,0,10">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <Grid Grid.Row="0">
                                                <TextBlock
                                                    Margin="0,0,0,5"
                                                    Style="{StaticResource DefaultTitleTextStyle}"
                                                    Text="Version" />
                                            </Grid>
                                            <Grid Grid.Row="1">
                                                <Border HorizontalAlignment="Center" Style="{StaticResource InputItemTextBoxStyle}">
                                                    <WrapPanel HorizontalAlignment="Center">
                                                        <Border Style="{StaticResource SettingsItem}">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*" />
                                                                    <ColumnDefinition Width="*" />
                                                                </Grid.ColumnDefinitions>
                                                                <TextBlock Style="{StaticResource DefaultTextStyle}" Text="Software" />
                                                                <ComboBox
                                                                    x:Name="SoftwareChangeBox"
                                                                    SelectionChanged="ChangeSupportedVersions"
                                                                    Style="{StaticResource InputComboBoxStyle}" />
                                                            </Grid>
                                                        </Border>

                                                        <Border Style="{StaticResource SettingsItem}">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*" />
                                                                    <ColumnDefinition Width="*" />
                                                                </Grid.ColumnDefinitions>
                                                                <TextBlock Style="{StaticResource DefaultTextStyle}" Text="Version" />
                                                                <ComboBox x:Name="VersionsChangeBox" Style="{StaticResource InputComboBoxStyle}" />
                                                            </Grid>
                                                        </Border>
                                                    </WrapPanel>
                                                </Border>
                                            </Grid>
                                        </Grid>

                                        <Grid Grid.Row="2" Margin="0,10">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <Grid Grid.Row="0">
                                                <TextBlock
                                                    Margin="0,0,0,5"
                                                    Style="{StaticResource DefaultTitleTextStyle}"
                                                    Text="Options" />
                                            </Grid>
                                            <Grid Grid.Row="1">
                                                <Border Style="{StaticResource InputItemTextBoxStyle}">
                                                    <Grid>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto" />
                                                            <RowDefinition Height="Auto" />
                                                        </Grid.RowDefinitions>

                                                        <Grid Grid.Row="0" Margin="0,0,0,10">
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock
                                                                    Margin="0,0,10,0"
                                                                    VerticalAlignment="Bottom"
                                                                    FontFamily="Segoe MDL2 Assets"
                                                                    FontSize="20"
                                                                    Foreground="White"
                                                                    Text="&#xE116;" />
                                                                <TextBlock Style="{StaticResource DefaultTextStyle}" Text="server.properties" />
                                                            </StackPanel>
                                                        </Grid>

                                                        <Grid Grid.Row="1">
                                                            <WrapPanel HorizontalAlignment="Center">
                                                                <Border Style="{StaticResource SettingsItem}">
                                                                    <Grid>
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="*" />
                                                                            <ColumnDefinition Width="*" />
                                                                        </Grid.ColumnDefinitions>

                                                                        <TextBlock Style="{StaticResource DefaultTextStyle}" Text="Slots" />
                                                                        <TextBox x:Name="SlotsInput" Style="{StaticResource InputTextBoxStyle}" />
                                                                    </Grid>
                                                                </Border>

                                                                <Border Style="{StaticResource SettingsItem}">
                                                                    <Grid>
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="*" />
                                                                            <ColumnDefinition Width="*" />
                                                                        </Grid.ColumnDefinitions>
                                                                        <TextBlock Style="{StaticResource DefaultTextStyle}" Text="Gamemode" />
                                                                        <ComboBox x:Name="GamemodeComboBox" Style="{StaticResource InputComboBoxStyle}">
                                                                            <sys:String>Survival</sys:String>
                                                                            <sys:String>Creative</sys:String>
                                                                            <sys:String>Adventure</sys:String>
                                                                            <sys:String>Spectator</sys:String>
                                                                        </ComboBox>
                                                                    </Grid>
                                                                </Border>

                                                                <Border Style="{StaticResource SettingsItem}">
                                                                    <Grid>
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="*" />
                                                                            <ColumnDefinition Width="*" />
                                                                        </Grid.ColumnDefinitions>
                                                                        <TextBlock Style="{StaticResource DefaultTextStyle}" Text="Difficulty" />
                                                                        <ComboBox
                                                                            x:Name="DifficultyComboBox"
                                                                            SelectedIndex="2"
                                                                            Style="{StaticResource InputComboBoxStyle}">
                                                                            <sys:String>Peaceful</sys:String>
                                                                            <sys:String>Easy</sys:String>
                                                                            <sys:String>Normal</sys:String>
                                                                            <sys:String>Hard</sys:String>
                                                                        </ComboBox>
                                                                    </Grid>
                                                                </Border>

                                                                <Border Style="{StaticResource SettingsItem}">
                                                                    <Grid>
                                                                        <Grid.ColumnDefinitions>
